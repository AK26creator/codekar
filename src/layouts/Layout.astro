---
import '../styles/global.css';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import RegistrationModal from '../components/registration/RegistrationModal.astro';

interface Props {
	title: string;
	hideCTA?: boolean;
}

const { title, hideCTA = false } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="KODEKAR Hackathon - Build. Innovate. Transform." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Google Fonts: Outfit -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header hideCTA={hideCTA} />
		
		<main>
			<slot />
		</main>
		<Footer />
		
		<!-- Global Modal -->
		<RegistrationModal />
		
		<script>
			import '../scripts/smoothScroll';
			import '../scripts/maskReveal';
		</script>
	</body>
</html>

