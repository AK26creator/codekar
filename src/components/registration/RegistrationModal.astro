<div id="registration-modal" class="modal" aria-hidden="true" data-open="false">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <button class="close-btn" aria-label="Close modal">&times;</button>
    
    <!-- Navigation Tabs for Modal -->
    <div class="modal-tabs">
      <button class="tab-btn active" data-target="new-registration">New Registration</button>
      <button class="tab-btn" data-target="already-registered">Already Registered?</button>
    </div>

    <!-- MAIN REGISTRATION FLOW -->
    <div id="new-registration" class="tab-content active">
      <div id="step-1" class="step active">
        <h2>Registration Type</h2>
        <div class="options">
          <button class="type-btn" data-type="individual">
            <span class="icon">ðŸ‘¤</span>
            <h3>Individual</h3>
            <p>Register as a solo participant.</p>
          </button>
          <button class="type-btn" data-type="team">
            <span class="icon">ðŸ‘¥</span>
            <h3>Team</h3>
            <p>Register with your squad (2-4 members).</p>
          </button>
        </div>
      </div>

      <div id="step-2" class="step">
        <h2 id="form-title">Individual Registration</h2>
        <form id="reg-form">
          <div class="form-grid">
            <div class="field">
              <label for="full-name">Full Name</label>
              <input type="text" id="full-name" required placeholder="John Doe">
            </div>
            
            <div class="field" id="team-name-field" style="display:none;">
              <label for="team-name">Team Name</label>
              <input type="text" id="team-name" placeholder="Code Warriors">
            </div>

            <!-- Team Members Fields (Hidden for Individual) -->
            <div class="field team-member-field" style="display:none;">
               <label for="member-2">Team Member 2 Name</label>
               <input type="text" id="member-2" placeholder="Member Name">
            </div>
            <div class="field team-member-field" style="display:none;">
               <label for="member-3">Team Member 3 Name</label>
               <input type="text" id="member-3" placeholder="Member Name">
            </div>
            <div class="field team-member-field" style="display:none;">
               <label for="member-4">Team Member 4 Name</label>
               <input type="text" id="member-4" placeholder="Member Name">
            </div>

            <div class="field">
              <label for="email">Email ID</label>
              <input type="email" id="email" required placeholder="john@example.com">
            </div>

            <div class="field">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" required placeholder="+91 9876543210">
            </div>

            <div class="field">
              <label for="college">College Name</label>
              <input type="text" id="college" required placeholder="IIT Bombay">
            </div>

            <div class="field">
              <label for="dept">Department</label>
              <input type="text" id="dept" required placeholder="Computer Science">
            </div>

            <div class="field">
              <label for="year">Year of Study</label>
              <select id="year" required>
                <option value="">Select Year</option>
                <option value="1">1st Year</option>
                <option value="2">2nd Year</option>
                <option value="3">3rd Year</option>
                <option value="4">4th Year</option>
              </select>
            </div>

            <div class="field">
              <label for="track">Project Track</label>
              <select id="track" required>
                <option value="">Select Track</option>
                <option value="education">Education</option>
                <option value="entertainment">Entertainment</option>
                <option value="ai-agents">AI Agents & Automations</option>
                <option value="core-ai">Core AI & ML</option>
                <option value="big-data">Big Data</option>
                <option value="cutting-edge">Cutting-edge Agents</option>
              </select>
            </div>
            
            <div class="field full-width">
              <label for="project-name">Project Name (Idea)</label>
              <input type="text" id="project-name" required placeholder="Project X">
            </div>

            <div class="field full-width checkbox-field">
              <label class="checkbox-container">
                <input type="checkbox" id="declaration" required>
                <span class="checkmark"></span>
                <span class="label-text">
                  I hereby declare that all my details are correct and I will follow all the rules and regulations by the organization. Any wrong behavior in the WhatsApp group will disqualify the team.
                </span>
              </label>
            </div>
          </div>
          
          <div class="actions">
            <button type="button" class="back-btn">Back</button>
            <button type="submit" class="submit-btn">Submit Registration</button>
          </div>
        </form>
      </div>

      <!-- Step 3: Registration Success -->
      <div id="step-3" class="step">
        <div class="success-message" style="text-align: center; padding: 2rem 0;">
          <div class="success-icon">âœ…</div>
          <h2 style="margin-top: 1.5rem; color: #10b981;">Registration Successful!</h2>
          <p style="color: #64748b; margin-top: 0.5rem; font-size: 1.1rem;">Your Unique Participation Code is:</p>
          
          <div class="code-box">
            <span id="generated-code-display">XXX-2026-XXXXX</span>
            <button type="button" class="copy-btn" id="copy-code-btn" aria-label="Copy Code">ðŸ“‹ Copy</button>
          </div>
          
          <p style="color: #ef4444; margin-top: 1rem; font-weight: 500;">Please save this code! You will need it.</p>
        </div>
        <div class="actions" style="margin-top: 2rem; display: flex; justify-content: center;">
           <button type="button" class="done-btn" onclick="document.querySelector('#registration-modal .close-btn').click();">Done</button>
        </div>
      </div>
    </div>

    <!-- ALREADY REGISTERED FLOW -->
    <div id="already-registered" class="tab-content">
      <div class="lookup-section">
        <h2>Find Your Registration</h2>
        <p>Enter your unique code (e.g., IND-2026-XXXXX or TEAM-2026-XXXXX) to view your details.</p>
        <div class="lookup-form">
          <input type="text" id="lookup-code" placeholder="Enter Unique Code" class="lookup-input">
          <button type="button" id="lookup-btn" class="submit-btn" style="width: auto;">Search</button>
        </div>
        <p id="lookup-error" style="color: #ef4444; margin-top: 1rem; display: none;">Invalid Code. Please check and try again.</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // DOM Elements
    const modal = document.getElementById('registration-modal');
    // Using modal.querySelector ensures we only get elements within this specific modal
    const overlay = modal?.querySelector('.modal-overlay');
    const closeBtn = modal?.querySelector('.close-btn');
    const typeBtns = modal?.querySelectorAll('.type-btn');
    const step1 = document.getElementById('step-1');
    const step2 = document.getElementById('step-2');
    const step3 = document.getElementById('step-3');
    const backBtn = document.querySelector('.back-btn');
    const form = document.getElementById('reg-form');
    const teamNameField = document.getElementById('team-name-field');
    const formTitle = document.getElementById('form-title');
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    let registrationType = 'individual';

    // Handle scroll locking with Lenis
    if (modal) {
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.type === 'attributes' && mutation.attributeName === 'data-open') {
            const isOpen = modal.dataset.open === 'true';
            // Keep aria-hidden in sync with data-open
            modal.setAttribute('aria-hidden', isOpen ? 'false' : 'true');

            if (isOpen) {
              document.body.classList.add('scroll-locked');
              if ((window as any).lenis) (window as any).lenis.stop();
            } else {
              document.body.classList.remove('scroll-locked');
              if ((window as any).lenis) (window as any).lenis.start();
            }
          }
        });
      });
      observer.observe(modal, { attributes: true });
    }

    // Close Modal Function
    function closeModal() {
      if (modal) {
        modal.dataset.open = "false";
        modal.setAttribute('aria-hidden', 'true');
        setTimeout(() => {
          resetForm();
        }, 400);
      }
    }

    if (overlay) overlay.addEventListener('click', closeModal);
    if (closeBtn) closeBtn.addEventListener('click', closeModal);
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.dataset.open === "true") {
        closeModal();
      }
    });

    // Tab Switching Logic
    tabBtns?.forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove active class from all tabs and contents
        tabBtns.forEach(b => b.classList.remove('active'));
        tabContents?.forEach(c => c.classList.remove('active'));
        
        // Add active to clicked tab
        btn.classList.add('active');
        // @ts-ignore
        const target = btn.dataset.target;
        const content = document.getElementById(target);
        if (content) content.classList.add('active');
      });
    });

    // Lookup Functionality
    const lookupBtn = document.getElementById('lookup-btn');
    const lookupError = document.getElementById('lookup-error');
    const lookupCodeInput = document.getElementById('lookup-code') as HTMLInputElement;

    lookupBtn?.addEventListener('click', async () => {
      const code = lookupCodeInput?.value.trim().toUpperCase();
      if (!code) {
        if(lookupError) {
          lookupError.textContent = "Please enter a code.";
          lookupError.style.display = "block";
        }
        return;
      }
      
      const originalText = lookupBtn.textContent;
      lookupBtn.textContent = 'Searching...';
      (lookupBtn as HTMLButtonElement).disabled = true;
      if (lookupError) lookupError.style.display = 'none';

      try {
        const { supabase } = await import('../../lib/supabase');
        const { data, error } = await supabase
          .from('registrations')
          .select('*')
          .eq('generated_code', code)
          .single();

        if (error || !data) {
          throw new Error('Invalid code');
        }

        // We got the data! Switch tabs and auto-fill the form
        // @ts-ignore
        document.querySelector('[data-target="new-registration"]').click();
        
        // Since Apps script doesn't explicitly return event_type yet, 
        // we can infer it from the code prefix (IND- or TEAM-)
        registrationType = code.startsWith('TEAM') ? 'team' : 'individual';
        
        // Disable form fields to indicate read-only view
        const formElements = form?.elements;
        if(formElements) {
            for(let i=0; i<formElements.length; i++) {
                (formElements[i] as HTMLInputElement).disabled = true;
            }
        }
        
        // Fill form fields
        if(formTitle) formTitle.textContent = `${data.event_type} Registration (Read-only)`;
        const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
        if(submitBtn) submitBtn.style.display = 'none';
        
        // Map data to fields
        (document.getElementById('full-name') as HTMLInputElement).value = data.event_type === 'Team' ? data.team_leader_name : data.full_name;
        (document.getElementById('email') as HTMLInputElement).value = data.event_type === 'Team' ? data.leader_email : data.email;
        (document.getElementById('phone') as HTMLInputElement).value = data.event_type === 'Team' ? data.leader_phone : data.phone;
        (document.getElementById('college') as HTMLInputElement).value = data.college || '';
        (document.getElementById('dept') as HTMLInputElement).value = data.department || '';
        
        if (registrationType === 'team') {
          if(teamNameField) teamNameField.style.display = 'block';
          (document.getElementById('team-name') as HTMLInputElement).value = data.team_name || '';
          
          document.querySelectorAll('.team-member-field')?.forEach(el => {
            (el as HTMLElement).style.display = 'flex';
          });
          
          // Try to parse member names if stored in member_details or directly
          // For simplicity assuming we stored them in member_2_name, etc. for backward compat if kept the same schema
          (document.getElementById('member-2') as HTMLInputElement).value = data.member_2_name || '';
          (document.getElementById('member-3') as HTMLInputElement).value = data.member_3_name || '';
          (document.getElementById('member-4') as HTMLInputElement).value = data.member_4_name || '';
          
          const nameLabel = document.querySelector('label[for="full-name"]');
          if(nameLabel) nameLabel.textContent = "Team Lead Name";
          const emailLabel = document.querySelector('label[for="email"]');
          if(emailLabel) emailLabel.textContent = "Team Lead Email";
        } else {
             if(teamNameField) teamNameField.style.display = 'none';
             document.querySelectorAll('.team-member-field')?.forEach(el => {
                (el as HTMLElement).style.display = 'none';
             });
        }
        
        step1?.classList.remove('active');
        step2?.classList.add('active');
        
      } catch (err) {
        console.error("Lookup Error: ", err);
        if(lookupError) {
          lookupError.textContent = "Invalid Code. Please check and try again.";
          lookupError.style.display = "block";
        }
      } finally {
        lookupBtn.textContent = originalText;
        (lookupBtn as HTMLButtonElement).disabled = false;
      }
    });


    // Step 1: Selection
    typeBtns?.forEach(btn => {
      btn.addEventListener('click', () => {
        // @ts-ignore
        registrationType = btn.dataset.type;
        
        // Reset disabled states if they were read-only from lookup
        const formElements = form?.elements;
        if(formElements) {
            for(let i=0; i<formElements.length; i++) {
                (formElements[i] as HTMLInputElement).disabled = false;
            }
        }
        const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
        if (submitBtn) submitBtn.style.display = 'block';
        if (form) (form as HTMLFormElement).reset();
        
        if (registrationType === 'team') {
          if(teamNameField) teamNameField.style.display = 'block';
          if(formTitle) formTitle.textContent = 'Team Registration';
          document.getElementById('team-name')?.setAttribute('required', 'true');
          
          // Show team member fields
          document.querySelectorAll('.team-member-field')?.forEach(el => {
            (el as HTMLElement).style.display = 'flex';
          });
          
          // Update labels for Team Lead
          const nameLabel = document.querySelector('label[for="full-name"]');
          if(nameLabel) nameLabel.textContent = "Team Lead Name";
          
          const emailLabel = document.querySelector('label[for="email"]');
          if(emailLabel) emailLabel.textContent = "Team Lead Email (Main ID)";

        } else {
          if(teamNameField) teamNameField.style.display = 'none';
          if(formTitle) formTitle.textContent = 'Individual Registration';
          document.getElementById('team-name')?.removeAttribute('required');
          
          // Hide team member fields
          document.querySelectorAll('.team-member-field')?.forEach(el => {
            (el as HTMLElement).style.display = 'none';
          });

          // Revert labels
          const nameLabel = document.querySelector('label[for="full-name"]');
          if(nameLabel) nameLabel.textContent = "Full Name";
          
          const emailLabel = document.querySelector('label[for="email"]');
          if(emailLabel) emailLabel.textContent = "Email ID";
        }

        step1?.classList.remove('active');
        step2?.classList.add('active');
      });
    });


    // Step 2 Back Button (goes back to step 1)
    backBtn?.addEventListener('click', () => {
      step2?.classList.remove('active');
      step1?.classList.add('active');
    });


    // Step 2: Form Submission Logic Integrated with Supabase
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const submitBtn = form.querySelector('.submit-btn') as HTMLButtonElement;
      if (submitBtn) {
        submitBtn.innerText = 'Submitting...';
        submitBtn.disabled = true;
      }

      // Collect form data
      const fullName = (document.getElementById('full-name') as HTMLInputElement)?.value;
      const email = (document.getElementById('email') as HTMLInputElement)?.value;
      const phone = (document.getElementById('phone') as HTMLInputElement)?.value;
      const college = (document.getElementById('college') as HTMLInputElement)?.value;
      const department = (document.getElementById('dept') as HTMLInputElement)?.value;
      const year = (document.getElementById('year') as HTMLSelectElement)?.value;
      const track = (document.getElementById('track') as HTMLSelectElement)?.value;
      const projectName = (document.getElementById('project-name') as HTMLInputElement)?.value;
      
      const isTeam = registrationType === 'team';
      const teamName = isTeam ? (document.getElementById('team-name') as HTMLInputElement)?.value : null;
      
      const member2 = (document.getElementById('member-2') as HTMLInputElement)?.value;
      const member3 = (document.getElementById('member-3') as HTMLInputElement)?.value;
      const member4 = (document.getElementById('member-4') as HTMLInputElement)?.value;

      // Unique Code Generation Logic
      let uniqueCode = '';
      const randomStr = () => Math.random().toString(36).substring(2, 7).toUpperCase();
      let isUnique = false;

      try {
        const { supabase } = await import('../../lib/supabase');
        
        // Loop to ensure uniqueness (with max 5 attempts to prevent infinite loops on DB failure)
        let attempts = 0;
        while(!isUnique && attempts < 5) {
          uniqueCode = isTeam ? `TEAM-2026-${randomStr()}` : `IND-2026-${randomStr()}`;
          const { data, error } = await supabase
            .from('registrations')
            .select('id')
            .eq('generated_code', uniqueCode);
            
          if (error) {
            console.error('Supabase select error:', error);
            throw new Error(error.message || 'Database error checking code uniqueness');
          }
            
          if (data && data.length === 0) {
            isUnique = true;
          }
          attempts++;
        }
        
        if (!isUnique) {
             throw new Error("Failed to generate a unique code. Please try again.");
        }

        // Map frontend fields to DB schema
        const insertData = {
          registration_type: isTeam ? 'team' : 'individual',
          generated_code: uniqueCode,
          college: college,
          department: department,
          year_of_study: parseInt(year),
          track: track,
          project_name: projectName,
          
          full_name: fullName,  // always required (team leader's name for teams)
          email: email,  // always required (team leader's email for teams)
          phone: phone,  // always required (team leader's phone for teams)
          
          team_name: isTeam ? teamName : null,
          team_leader_name: isTeam ? fullName : null,
          leader_email: isTeam ? email : null,
          leader_phone: isTeam ? phone : null,
          
          member_2_name: isTeam ? member2 : null,
          member_3_name: isTeam ? member3 : null,
          member_4_name: isTeam ? member4 : null,
        };

        const { error } = await supabase.from('registrations').insert([insertData]);

        if (error) throw error;

        // Trigger the Confirmation Email Edge Function
        // Using "invoke" handles the JWT authorization automatically via the Supabase client
        try {
          supabase.functions.invoke('send-confirmation-email', {
            body: {
              name: isTeam ? teamName || fullName : fullName,
              email: email,
              unique_code: uniqueCode
            }
          });
        } catch (emailErr) {
          console.error("Failed to trigger email function:", emailErr);
          // We intentionally don't throw here so the user still gets the success UI if only the email fails.
        }

        // Show Success Step
        step2?.classList.remove('active');
        step3?.classList.add('active');
        
        const codeDisplay = document.getElementById('generated-code-display');
        if(codeDisplay) codeDisplay.textContent = uniqueCode;

      } catch (err: any) {
        console.error('Registration failed:', err);
        // Show the actual error message dynamically now
        alert(`Registration failed: ${err.message || 'Unexpected error'}. Please try again.`);
        
        // Reset button
        if (submitBtn) {
          submitBtn.innerText = 'Submit Registration';
          submitBtn.disabled = false;
        }
      }
    });

    // Copy Code Logic
    const copyBtn = document.getElementById('copy-code-btn');
    copyBtn?.addEventListener('click', () => {
       const code = document.getElementById('generated-code-display')?.textContent;
       if(code) {
         navigator.clipboard.writeText(code).then(() => {
           const ogText = copyBtn.innerHTML;
           copyBtn.innerHTML = 'âœ… Copied!';
           setTimeout(() => { copyBtn.innerHTML = ogText; }, 2000);
         });
       }
    });

    // Open modal if hash is #registration
    function checkHash() {
      if (window.location.hash === '#registration') {
        const regBtn = document.querySelector('[data-registration-trigger]');
        if (regBtn) {
          (regBtn as HTMLElement).click();
        } else if (modal) {
          modal.dataset.open = "true";
          modal.setAttribute('aria-hidden', 'false');
        }
      }
    }

    checkHash();
    window.addEventListener('hashchange', checkHash);

    function resetForm() {
      step1?.classList.add('active');
      step2?.classList.remove('active');
      step3?.classList.remove('active');
      
      // Reset disabled states
      const formElements = form?.elements;
      if(formElements) {
          for(let i=0; i<formElements.length; i++) {
              (formElements[i] as HTMLInputElement).disabled = false;
          }
      }
      const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
      if (submitBtn) {
          submitBtn.style.display = 'block';
          submitBtn.innerText = 'Submit Registration';
          submitBtn.disabled = false;
      }
      
      if(lookupCodeInput) lookupCodeInput.value = '';
      if(lookupError) lookupError.style.display = 'none';

      // @ts-ignore
      form?.reset();
    }
  });

</script>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2000;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.3s, visibility 0.3s;
  }

  .modal[data-open="true"] {
    opacity: 1;
    visibility: visible;
    pointer-events: all;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    background: white;
    width: 90%;
    max-width: 650px;
    padding: 2rem;
    border-radius: 1rem;
    position: relative;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(20px);
    transition: transform 0.3s;
    max-height: 90vh;
    max-height: 90dvh;
    overflow-y: auto;
    overflow-x: hidden;
    overscroll-behavior: contain;
    -webkit-overflow-scrolling: touch;
    pointer-events: auto;
  }

  .modal-content::-webkit-scrollbar {
    width: 6px;
  }
  .modal-content::-webkit-scrollbar-track {
    background: transparent;
  }
  .modal-content::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 10px;
  }

  .modal[data-open="true"] .modal-content {
    transform: translateY(0);
  }

  .close-btn {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    background: none;
    border: none;
    font-size: 2rem;
    line-height: 1;
    color: #64748b;
    padding: 0.5rem;
    cursor: pointer;
    transition: color 0.2s;
    z-index: 10;
    max-width: 40px;
  }
  
  .close-btn:hover { color: #0f172a; }

  .modal-tabs {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    border-bottom: 2px solid #e2e8f0;
    padding-bottom: 0.5rem;
  }

  .tab-btn {
    background: none;
    border: none;
    font-size: 1.1rem;
    font-weight: 600;
    color: #64748b;
    cursor: pointer;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .tab-btn:hover {
    background: #f1f5f9;
  }

  .tab-btn.active {
    color: var(--color-s-primary, #2563eb);
    background: #eff6ff;
    transform: scale(1.05);
  }

  .tab-content {
    display: none;
    animation: fadeIn 0.4s;
  }
  
  .tab-content.active {
    display: block;
  }

  .step { display: none; animation: fadeIn 0.4s; }
  .step.active { display: block; }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .options {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .type-btn {
    background: #f1f5f9;
    border: 2px solid transparent;
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: all 0.2s;
    cursor: pointer;
  }
  .type-btn:hover {
    border-color: var(--color-s-primary, #2563eb);
    background: #e0f2fe;
  }
  .icon { font-size: 3rem; display: block; margin-bottom: 1rem; }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem;
