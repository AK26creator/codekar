<div id="registration-modal" class="modal" aria-hidden="true" data-open="false">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <button class="close-btn" aria-label="Close modal">&times;</button>
    
    <!-- Navigation Tabs for Modal -->
    <div class="modal-tabs">
      <button class="tab-btn active" data-target="new-registration">New Registration</button>
      <button class="tab-btn" data-target="already-registered">Already Registered?</button>
    </div>

    <!-- MAIN REGISTRATION FLOW -->
    <div id="new-registration" class="tab-content active">
      <div id="step-1" class="step active">
        <h2>Registration Type</h2>
        <div class="options">
          <button class="type-btn" data-type="individual">
            <span class="icon">ðŸ‘¤</span>
            <h3>Individual</h3>
            <p>Register as a solo participant.</p>
          </button>
          <button class="type-btn" data-type="team">
            <span class="icon">ðŸ‘¥</span>
            <h3>Team</h3>
            <p>Register with your squad (2-4 members).</p>
          </button>
        </div>
      </div>

      <div id="step-2" class="step">
        <h2 id="form-title">Individual Registration</h2>
        <form id="reg-form">
          <div class="form-grid">
            <div class="field">
              <label for="full-name">Full Name</label>
              <input type="text" id="full-name" required>
            </div>
            
            <div class="field" id="team-name-field" style="display:none;">
              <label for="team-name">Team Name</label>
              <input type="text" id="team-name">
            </div>

            <!-- Team Members Fields (Hidden for Individual) -->
            <div class="field team-member-field" style="display:none;">
               <label for="member-2">Team Member 2 Name</label>
               <input type="text" id="member-2">
            </div>
            <div class="field team-member-field" style="display:none;">
               <label for="member-3">Team Member 3 Name</label>
               <input type="text" id="member-3">
            </div>
            <div class="field team-member-field" style="display:none;">
               <label for="member-4">Team Member 4 Name</label>
               <input type="text" id="member-4">
            </div>

            <div class="field">
              <label for="email">Email ID</label>
              <input type="email" id="email" required>
            </div>

            <div class="field">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" required>
            </div>

            <div class="field">
              <label for="college">College Name</label>
              <input type="text" id="college" required>
            </div>

            <div class="field">
              <label for="dept">Department</label>
              <input type="text" id="dept" required>
            </div>

            <div class="field">
              <label for="year">Year of Study</label>
              <select id="year" required>
                <option value="">Select Year</option>
                <option value="1">1st Year</option>
                <option value="2">2nd Year</option>
                <option value="3">3rd Year</option>
                <option value="4">4th Year</option>
              </select>
            </div>

            <div class="field">
              <label for="track">Project Track</label>
              <select id="track" required>
                <option value="">Select Track</option>
                <option value="education">Education</option>
                <option value="entertainment">Entertainment</option>
                <option value="ai-agents">AI Agents & Automations</option>
                <option value="core-ai">Core AI & ML</option>
                <option value="big-data">Big Data</option>
                <option value="cutting-edge">Cutting-edge Agents</option>
              </select>
            </div>
            
            <div class="field full-width">
              <label for="project-name">Project Name (Idea)</label>
              <input type="text" id="project-name" required>
            </div>

            <div class="field full-width checkbox-field">
              <label class="checkbox-container">
                <input type="checkbox" id="declaration" required>
                <span class="checkmark"></span>
                <span class="label-text">
                  I hereby declare that all my details are correct and I will follow all the rules and regulations by the organization. Any wrong behavior in the WhatsApp group will disqualify the team.
                </span>
              </label>
            </div>
          </div>
          
          <div class="actions">
            <button type="button" class="back-btn">Back</button>
            <button type="submit" class="submit-btn">Proceed to Payment</button>
          </div>
        </form>
      </div>

      <!-- Step 3: QR Code Reveal -->
      <div id="step-3" class="step">
        <div class="payment-card reveal-animation">
          <div class="timer-badge">âŒ› <span id="payment-timer">05:00</span></div>
          <h2>Scan the QR to Complete Your Payment</h2>
          
          <div class="qr-container">
            <img id="qr-image" src="" alt="Payment QR Code">
          </div>
          
          <div class="payment-details">
            <p class="amount-display">Amount: <span id="display-payment-amount">â‚¹299</span></p>
            <p class="payment-instructions">Pay using any UPI app (GPay, PhonePe, Paytm). Take a screenshot after payment.</p>
          </div>

          <div id="timer-expired-msg" class="error-msg" style="display: none;">
            <p>Payment session expired. Please retry.</p>
            <button type="button" class="retry-btn" id="retry-payment-btn">Retry Payment</button>
          </div>
          
          <div class="actions">
            <button type="button" class="cancel-btn" id="cancel-payment-btn">Cancel Payment</button>
            <button type="button" class="submit-btn" id="ive-paid-btn">I've Paid</button>
          </div>
        </div>
      </div>

      <!-- Step 4: Payment Confirmation Form -->
      <div id="step-4" class="step">
        <h2>Payment Confirmation</h2>
        <p style="color: #64748b; margin-bottom: 1.5rem;">Enter transaction details to complete registration.</p>
        <form id="payment-confirm-form">
          <div class="form-grid">
            <div class="field full-width">
              <label for="transaction-id">Transaction ID (Required)</label>
              <input type="text" id="transaction-id" required>
            </div>
            
            <div class="field full-width">
              <label for="confirm-team-name">Team Name (Required)</label>
              <input type="text" id="confirm-team-name" required>
            </div>

            <div class="field full-width">
              <label for="payer-phone">Phone Number of Payer (Required)</label>
              <input type="tel" id="payer-phone" required pattern="[0-9]{10}">
            </div>
          </div>
          
          <div class="actions" style="margin-top: 2rem;">
            <button type="button" class="back-btn" id="back-to-qr-btn">Back</button>
            <button type="submit" class="submit-btn" id="complete-reg-btn" disabled>Complete Registration</button>
          </div>
        </form>
      </div>

      <!-- Step 5: Success & Invoice & WhatsApp Join -->
      <div id="step-5" class="step">
        <div class="success-message" style="text-align: center; padding: 1.5rem 0;">
          <div class="success-icon">ðŸŽ‰</div>
          <h2 style="margin-top: 1rem; color: #10b981;">Payment Successful!</h2>
          <p style="color: #64748b; margin-top: 0.5rem; font-size: 1.1rem;">Your registration is complete.</p>
          
          <div class="code-box">
             <span id="final-generated-code">IND-2026-XXXXX</span>
             <small style="display: block; margin-top: 0.5rem; color: #64748b;">Participation Code</small>
          </div>

          <div class="action-card">
            <h3>Join WhatsApp Group</h3>
            <p>Stay updated with event alerts and announcements.</p>
            <div class="action-buttons">
              <a href="https://chat.whatsapp.com/G5v7tXGzX7z7z7z7z7z7" target="_blank" class="whatsapp-btn">Join Official Group</a>
              <button type="button" class="invoice-btn" id="download-invoice-btn">Download Invoice (PDF)</button>
            </div>
          </div>
          
          <div class="actions" style="margin-top: 2rem; justify-content: center;">
             <button type="button" class="done-btn" onclick="document.querySelector('#registration-modal .close-btn').click();">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- ALREADY REGISTERED FLOW -->
    <div id="already-registered" class="tab-content">
      <div class="lookup-section">
        <h2>Find Your Registration</h2>
        <p>Enter your unique code (e.g., IND-2026-XXXXX or TEAM-2026-XXXXX) to view your details.</p>
        <div class="lookup-form">
          <input type="text" id="lookup-code" class="lookup-input">
          <button type="button" id="lookup-btn" class="submit-btn" style="width: auto;">Search</button>
        </div>
        <p id="lookup-error" style="color: #ef4444; margin-top: 1rem; display: none;">Invalid Code. Please check and try again.</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // DOM Elements
    const modal = document.getElementById('registration-modal');
    const overlay = modal?.querySelector('.modal-overlay');
    const closeBtn = modal?.querySelector('.close-btn');
    const typeBtns = modal?.querySelectorAll('.type-btn');
    const step1 = document.getElementById('step-1');
    const step2 = document.getElementById('step-2');
    const step3 = document.getElementById('step-3');
    const step4 = document.getElementById('step-4');
    const step5 = document.getElementById('step-5');
    const backBtn = document.querySelector('.back-btn');
    const form = document.getElementById('reg-form');
    const paymentForm = document.getElementById('payment-confirm-form') as HTMLFormElement;
    const teamNameField = document.getElementById('team-name-field');
    const formTitle = document.getElementById('form-title');
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    // Payment Workflow Elements
    const qrImage = document.getElementById('qr-image') as HTMLImageElement;
    const paymentTimerDisplay = document.getElementById('payment-timer');
    const displayAmount = document.getElementById('display-payment-amount');
    const timerExpiredMsg = document.getElementById('timer-expired-msg');
    const ivePaidBtn = document.getElementById('ive-paid-btn');
    const cancelPaymentBtn = document.getElementById('cancel-payment-btn');
    const retryPaymentBtn = document.getElementById('retry-payment-btn');
    const backToQrBtn = document.getElementById('back-to-qr-btn');
    const completeRegBtn = document.getElementById('complete-reg-btn') as HTMLButtonElement;
    const downloadInvoiceBtn = document.getElementById('download-invoice-btn');

    let registrationType = 'individual';
    let paymentTimer: any = null;
    let timeLeft = 300; // 5 minutes
    let registrationData: any = {};

    // Handle scroll locking with Lenis
    if (modal) {
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.type === 'attributes' && mutation.attributeName === 'data-open') {
            const isOpen = modal.dataset.open === 'true';
            modal.setAttribute('aria-hidden', isOpen ? 'false' : 'true');

            if (isOpen) {
              document.body.classList.add('scroll-locked');
              if ((window as any).lenis) (window as any).lenis.stop();
            } else {
              document.body.classList.remove('scroll-locked');
              if ((window as any).lenis) (window as any).lenis.start();
              stopTimer();
            }
          }
        });
      });
      observer.observe(modal, { attributes: true });
    }

    // Close Modal Function
    function closeModal() {
      if (modal) {
        modal.dataset.open = "false";
        modal.setAttribute('aria-hidden', 'true');
        setTimeout(() => {
          resetForm();
        }, 400);
      }
    }

    if (overlay) overlay.addEventListener('click', closeModal);
    if (closeBtn) closeBtn.addEventListener('click', closeModal);
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.dataset.open === "true") {
        closeModal();
      }
    });

    // Tab Switching Logic
    tabBtns?.forEach(btn => {
      btn.addEventListener('click', () => {
        tabBtns.forEach(b => b.classList.remove('active'));
        tabContents?.forEach(c => c.classList.remove('active'));
        btn.classList.add('active');
        // @ts-ignore
        const target = btn.dataset.target;
        const content = document.getElementById(target);
        if (content) content.classList.add('active');
      });
    });

    // Step 1: Selection
    typeBtns?.forEach(btn => {
      btn.addEventListener('click', () => {
        // @ts-ignore
        registrationType = btn.dataset.type;
        
        const formElements = form?.elements;
        if(formElements) {
            for(let i=0; i<formElements.length; i++) {
                (formElements[i] as HTMLInputElement).disabled = false;
            }
        }
        const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
        if (submitBtn) submitBtn.style.display = 'block';
        if (form) (form as HTMLFormElement).reset();
        
        if (registrationType === 'team') {
          if(teamNameField) teamNameField.style.display = 'block';
          if(formTitle) formTitle.textContent = 'Team Registration';
          document.getElementById('team-name')?.setAttribute('required', 'true');
          document.querySelectorAll('.team-member-field')?.forEach(el => {
            (el as HTMLElement).style.display = 'flex';
          });
          const nameLabel = document.querySelector('label[for="full-name"]');
          if(nameLabel) nameLabel.textContent = "Team Lead Name";
          const emailLabel = document.querySelector('label[for="email"]');
          if(emailLabel) emailLabel.textContent = "Team Lead Email (Main ID)";
        } else {
          if(teamNameField) teamNameField.style.display = 'none';
          if(formTitle) formTitle.textContent = 'Individual Registration';
          document.getElementById('team-name')?.removeAttribute('required');
          document.querySelectorAll('.team-member-field')?.forEach(el => {
            (el as HTMLElement).style.display = 'none';
          });
          const nameLabel = document.querySelector('label[for="full-name"]');
          if(nameLabel) nameLabel.textContent = "Full Name";
          const emailLabel = document.querySelector('label[for="email"]');
          if(emailLabel) emailLabel.textContent = "Email ID";
        }

        step1?.classList.remove('active');
        step2?.classList.add('active');
      });
    });

    backBtn?.addEventListener('click', () => {
      step2?.classList.remove('active');
      step1?.classList.add('active');
    });

    // Step 2: Proceed to Payment
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Store current form data
      registrationData = {
        fullName: (document.getElementById('full-name') as HTMLInputElement).value,
        email: (document.getElementById('email') as HTMLInputElement).value,
        phone: (document.getElementById('phone') as HTMLInputElement).value,
        college: (document.getElementById('college') as HTMLInputElement).value,
        department: (document.getElementById('dept') as HTMLInputElement).value,
        year: (document.getElementById('year') as HTMLSelectElement).value,
        track: (document.getElementById('track') as HTMLSelectElement).value,
        projectName: (document.getElementById('project-name') as HTMLInputElement).value,
        teamName: registrationType === 'team' ? (document.getElementById('team-name') as HTMLInputElement).value : '',
        members: [
          (document.getElementById('member-2') as HTMLInputElement).value,
          (document.getElementById('member-3') as HTMLInputElement).value,
          (document.getElementById('member-4') as HTMLInputElement).value
        ]
      };

      // Set Amount and QR based on Type
      const amount = registrationType === 'team' ? '999' : '299';
      if (displayAmount) displayAmount.textContent = `â‚¹${amount}`;
      if (qrImage) qrImage.src = `/${amount}.jpeg`;
      
      // Also pre-fill step 4 team name
      const confirmTeamName = document.getElementById('confirm-team-name') as HTMLInputElement;
      if (confirmTeamName) confirmTeamName.value = registrationData.teamName || registrationData.fullName;

      // Transition to Payment QR Step
      startPaymentFlow();
    });

    function startPaymentFlow() {
      step2?.classList.remove('active');
      step3?.classList.add('active');
      startTimer();
    }

    function startTimer() {
      stopTimer();
      timeLeft = 300;
      updateTimerDisplay();
      if(timerExpiredMsg) timerExpiredMsg.style.display = 'none';
      if(ivePaidBtn) (ivePaidBtn as HTMLButtonElement).disabled = false;
      
      paymentTimer = setInterval(() => {
        timeLeft--;
        updateTimerDisplay();
        if (timeLeft <= 0) {
          expireTimer();
        }
      }, 1000);
    }

    function stopTimer() {
      if (paymentTimer) clearInterval(paymentTimer);
      paymentTimer = null;
    }

    function updateTimerDisplay() {
      const minutes = Math.floor(timeLeft / 60);
      const seconds = timeLeft % 60;
      if (paymentTimerDisplay) {
        paymentTimerDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
      }
    }

    function expireTimer() {
      stopTimer();
      if (timerExpiredMsg) timerExpiredMsg.style.display = 'block';
      if (ivePaidBtn) (ivePaidBtn as HTMLButtonElement).disabled = true;
      if (completeRegBtn) completeRegBtn.disabled = true;
    }

    // Step 3 Actions
    retryPaymentBtn?.addEventListener('click', startTimer);
    cancelPaymentBtn?.addEventListener('click', () => {
      stopTimer();
      step3?.classList.remove('active');
      step2?.classList.add('active');
    });

    ivePaidBtn?.addEventListener('click', () => {
      step3?.classList.remove('active');
      step4?.classList.add('active');
    });

    // Step 4 Actions
    backToQrBtn?.addEventListener('click', () => {
      step4?.classList.remove('active');
      step3?.classList.add('active');
    });

    // Form Validation for Step 4
    const validatePaymentForm = () => {
      const txId = (document.getElementById('transaction-id') as HTMLInputElement).value.trim();
      const teamName = (document.getElementById('confirm-team-name') as HTMLInputElement).value.trim();
      const phone = (document.getElementById('payer-phone') as HTMLInputElement).value.trim();
      const isValid = txId !== '' && teamName !== '' && /^[0-9]{10}$/.test(phone) && timeLeft > 0;
      if (completeRegBtn) completeRegBtn.disabled = !isValid;
    };

    paymentForm?.addEventListener('input', validatePaymentForm);

    paymentForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (completeRegBtn) {
        completeRegBtn.disabled = true;
        completeRegBtn.textContent = 'Verifying...';
      }

      try {
        const { supabase } = await import('../../lib/supabase');
        
        let uniqueCode = '';
        const randomStr = () => Math.random().toString(36).substring(2, 7).toUpperCase();
        let isUnique = false;
        let attempts = 0;
        
        while(!isUnique && attempts < 5) {
          uniqueCode = registrationType === 'team' ? `TEAM-2026-${randomStr()}` : `IND-2026-${randomStr()}`;
          const { data, error } = await supabase.from('registrations').select('id').eq('generated_code', uniqueCode);
          if (error) throw error;
          if (data && data.length === 0) isUnique = true;
          attempts++;
        }

        const insertData = {
          registration_type: registrationType,
          generated_code: uniqueCode,
          college: registrationData.college,
          department: registrationData.department,
          year_of_study: parseInt(registrationData.year),
          track: registrationData.track,
          project_name: registrationData.projectName,
          full_name: registrationData.fullName,
          email: registrationData.email,
          phone: registrationData.phone,
          team_name: registrationData.teamName || null,
          team_leader_name: registrationData.fullName,
          leader_email: registrationData.email,
          leader_phone: registrationData.phone,
          member_2_name: registrationData.members[0] || null,
          member_3_name: registrationData.members[1] || null,
          member_4_name: registrationData.members[2] || null,
          transaction_id: (document.getElementById('transaction-id') as HTMLInputElement).value.trim(),
          payer_phone: (document.getElementById('payer-phone') as HTMLInputElement).value.trim(),
          payment_status: 'Paid',
          amount: registrationType === 'team' ? 999 : 299
        };

        const { error: insertError } = await supabase.from('registrations').insert([insertData]);
        if (insertError) throw insertError;

        // Trigger Confirmation Email
        try {
          supabase.functions.invoke('send-confirmation-email', {
            body: {
              name: registrationData.teamName || registrationData.fullName,
              email: registrationData.email,
              unique_code: uniqueCode
            }
          });
        } catch (emailErr) {}

        // Success transition
        stopTimer();
        const finalCodeDisplay = document.getElementById('final-generated-code');
        if (finalCodeDisplay) finalCodeDisplay.textContent = uniqueCode;
        
        step4?.classList.remove('active');
        step5?.classList.add('active');

      } catch (err: any) {
        alert(`Registration failed: ${err.message || 'Unexpected error'}. Please try again.`);
        if (completeRegBtn) {
          completeRegBtn.disabled = false;
          completeRegBtn.textContent = 'Complete Registration';
        }
      }
    });

    // Invoice Generation
    downloadInvoiceBtn?.addEventListener('click', async () => {
      const { jsPDF } = await import('jspdf');
      const doc = new jsPDF();
      const invoiceId = `INV-${Math.random().toString(36).substring(2, 9).toUpperCase()}`;
      const now = new Date();
      
      // Design Constants
      const primaryColor = [37, 99, 235];
      const grayColor = [100, 116, 139];
      
      // Header
      doc.setFontSize(22);
      doc.setTextColor(primaryColor[0], primaryColor[1], primaryColor[2]);
      doc.text('Unai Tech', 105, 25, { align: 'center' });
      
      doc.setFontSize(10);
      doc.setTextColor(grayColor[0], grayColor[1], grayColor[2]);
      doc.text('Payment Received Successfully', 105, 32, { align: 'center' });

      // Badge/Line
      doc.setDrawColor(primaryColor[0], primaryColor[1], primaryColor[2]);
      doc.setLineWidth(0.5);
      doc.line(20, 40, 190, 40);

      // Invoice Details
      doc.setTextColor(0, 0, 0);
      doc.setFontSize(11);
      doc.text(`Invoice ID: ${invoiceId}`, 20, 55);
      doc.text(`Date & Time: ${now.toLocaleString()}`, 20, 62);
      doc.text(`Status: Paid`, 20, 69);

      // Registration Details
      doc.setFontSize(14);
      doc.setTextColor(primaryColor[0], primaryColor[1], primaryColor[2]);
      doc.text('Details', 20, 85);
      
      doc.setTextColor(0, 0, 0);
      doc.setFontSize(11);
      doc.text(`Registration Type: ${registrationType.charAt(0).toUpperCase() + registrationType.slice(1)}`, 20, 95);
      doc.text(`Team Name: ${registrationData.teamName || registrationData.fullName}`, 20, 102);
      doc.text(`Amount Paid: â‚¹${registrationType === 'team' ? '999' : '299'}`, 20, 109);
      doc.text(`Transaction ID: ${(document.getElementById('transaction-id') as HTMLInputElement).value}`, 20, 116);
      doc.text(`Payer Phone: ${(document.getElementById('payer-phone') as HTMLInputElement).value}`, 20, 123);
      doc.text(`Participant Code: ${document.getElementById('final-generated-code')?.textContent || 'N/A'}`, 20, 130);

      // Footer
      doc.setDrawColor(226, 232, 240);
      doc.line(20, 260, 190, 260);
      doc.setFontSize(9);
      doc.setTextColor(grayColor[0], grayColor[1], grayColor[2]);
      doc.text('This is a computer-generated invoice. No signature required.', 105, 270, { align: 'center' });
      doc.text('Thank you for participating!', 105, 275, { align: 'center' });

      doc.save(`${invoiceId}.pdf`);
    });

    function resetForm() {
      stopTimer();
      step1?.classList.add('active');
      step2?.classList.remove('active');
      step3?.classList.remove('active');
      step4?.classList.remove('active');
      step5?.classList.remove('active');
      
      const formElements = form?.elements;
      if(formElements) {
          for(let i=0; i<formElements.length; i++) {
              (formElements[i] as HTMLInputElement).disabled = false;
          }
      }
      const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
      if (submitBtn) {
          submitBtn.style.display = 'block';
          submitBtn.textContent = 'Proceed to Payment';
          submitBtn.disabled = false;
      }
      
      // @ts-ignore
      form?.reset();
      paymentForm?.reset();
      if(completeRegBtn) {
        completeRegBtn.disabled = true;
        completeRegBtn.textContent = 'Complete Registration';
      }
    }
  });

</script>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2000;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.3s, visibility 0.3s;
  }

  .modal[data-open="true"] {
    opacity: 1;
    visibility: visible;
    pointer-events: all;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    background: white;
    width: 90%;
    max-width: 650px;
    padding: 2rem;
    border-radius: 1rem;
    position: relative;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
