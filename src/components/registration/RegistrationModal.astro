<div id="registration-modal" class="modal" aria-hidden="false" data-open="false">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    
    <div id="step-1" class="step active">
      <h2>Registration Type</h2>
      <div class="options">
        <button class="type-btn" data-type="individual">
          <span class="icon">üë§</span>
          <h3>Individual</h3>
          <p>Register as a solo participant.</p>
        </button>
        <button class="type-btn" data-type="team">
          <span class="icon">üë•</span>
          <h3>Team</h3>
          <p>Register with your squad (2-4 members).</p>
        </button>
      </div>
      <div class="actions" style="margin-top: 1.5rem;">
        <button type="button" class="step1-back-btn">Back</button>
      </div>
    </div>

    <div id="step-2" class="step">
      <h2 id="form-title">Individual Registration</h2>
      <form id="reg-form">
        <div class="form-grid">
          <div class="field">
            <label for="full-name">Full Name</label>
            <input type="text" id="full-name" required placeholder="John Doe">
          </div>
          
          <div class="field" id="team-name-field" style="display:none;">
            <label for="team-name">Team Name</label>
            <input type="text" id="team-name" placeholder="Code Warriors">
          </div>

          <div class="field">
            <label for="email">Email ID</label>
            <input type="email" id="email" required placeholder="john@example.com">
          </div>

          <div class="field">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" required placeholder="+91 9876543210">
          </div>

          <div class="field">
            <label for="college">College Name</label>
            <input type="text" id="college" required placeholder="IIT Bombay">
          </div>

          <div class="field">
            <label for="dept">Department</label>
            <input type="text" id="dept" required placeholder="Computer Science">
          </div>

          <div class="field">
            <label for="year">Year of Study</label>
            <select id="year" required>
              <option value="">Select Year</option>
              <option value="1">1st Year</option>
              <option value="2">2nd Year</option>
              <option value="3">3rd Year</option>
              <option value="4">4th Year</option>
            </select>
          </div>

          <div class="field">
            <label for="track">Project Track</label>
            <select id="track" required>
              <option value="">Select Track</option>
              <option value="education">Education</option>
              <option value="entertainment">Entertainment</option>
              <option value="ai-agents">AI Agents & Automations</option>
              <option value="core-ai">Core AI & ML</option>
              <option value="big-data">Big Data</option>
              <option value="cutting-edge">Cutting-edge Agents</option>
            </select>
          </div>
          
          <div class="field full-width">
            <label for="project-name">Project Name (Idea)</label>
            <input type="text" id="project-name" required placeholder="Project X">
          </div>
        </div>
        
        <div class="actions">
          <button type="button" class="back-btn">Back</button>
          <button type="submit" class="submit-btn">Proceed to Payment</button>
        </div>
      </form>
    </div>

    <div id="step-3" class="step">
      <h2>Complete Payment</h2>
      
      <!-- Loading State -->
      <div id="payment-loading" class="payment-loading">
        <div class="loader"></div>
        <p>Creating your payment...</p>
      </div>

      <!-- Payment Details -->
      <div id="payment-details" class="payment-details" style="display: none;">
        <div class="amount-display">
          <span class="label">Amount to Pay:</span>
          <span class="amount" id="payment-amount">‚Çπ0</span>
        </div>

        <div class="qr-section">
          <h3>Scan QR Code to Pay</h3>
          <div id="qr-code-container" class="qr-code"></div>
          <p class="qr-note">Scan with any UPI app</p>
        </div>

        <div class="divider">
          <span>OR</span>
        </div>

        <button type="button" id="pay-online-btn" class="pay-online-btn">
          Pay Online
        </button>

        <div class="payment-info">
          <p class="info-text">Order ID: <span id="display-order-id"></span></p>
        </div>
      </div>

      <!-- Error State -->
      <div id="payment-error" class="payment-error" style="display: none;">
        <div class="error-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="15" y1="9" x2="9" y2="15"></line>
            <line x1="9" y1="9" x2="15" y2="15"></line>
          </svg>
        </div>
        <h3 class="error-title">Payment Creation Failed</h3>
        <p class="error-message">We couldn't process your payment request. Please try again or contact support if the issue persists.</p>
        <div class="error-actions">
          <button type="button" class="retry-payment-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="23 4 23 10 17 10"></polyline>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
            </svg>
            Try Again
          </button>
        </div>
      </div>

      <div class="actions" style="margin-top: 1.5rem;">
        <button type="button" class="payment-back-btn">Back to Form</button>
      </div>
    </div>
  </div>
</div>

<script>
  import QRCode from 'qrcode';

  // Wait for DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', () => {
    // DOM Elements
    const modal = document.getElementById('registration-modal');
    const overlay = document.querySelector('.modal-overlay');
    const typeBtns = document.querySelectorAll('.type-btn');
    const step1 = document.getElementById('step-1');
    const step2 = document.getElementById('step-2');
    const step3 = document.getElementById('step-3');
    const backBtn = document.querySelector('.back-btn');
    const form = document.getElementById('reg-form');
    const teamNameField = document.getElementById('team-name-field');
    const formTitle = document.getElementById('form-title');

    let registrationType = 'individual';

    // Close Modal Function
    function closeModal() {
      if (modal) {
        modal.dataset.open = "false";
        modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
        // Reset to step 1 after close animation
        setTimeout(() => {
          resetForm();
        }, 300);
      }
    }

    // Overlay click to close
    if (overlay) {
      overlay.addEventListener('click', () => {
        closeModal();
      });
    }

    // ESC key to close modal
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.dataset.open === "true") {
        closeModal();
      }
    });

    // Step 1: Selection
    typeBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // @ts-ignore
        registrationType = btn.dataset.type;
        
        if (registrationType === 'team') {
          if(teamNameField) teamNameField.style.display = 'block';
          if(formTitle) formTitle.textContent = 'Team Registration';
          document.getElementById('team-name')?.setAttribute('required', 'true');
        } else {
          if(teamNameField) teamNameField.style.display = 'none';
          if(formTitle) formTitle.textContent = 'Individual Registration';
          document.getElementById('team-name')?.removeAttribute('required');
        }

        step1?.classList.remove('active');
        step2?.classList.add('active');
      });
    });

    // Step 1 Back Button (closes modal)
    const step1BackBtn = document.querySelector('.step1-back-btn');
    step1BackBtn?.addEventListener('click', () => {
      closeModal();
    });

    // Step 2 Back Button (goes back to step 1)
    backBtn?.addEventListener('click', () => {
      step2?.classList.remove('active');
      step1?.classList.add('active');
    });

    // Payment Back Button
    const paymentBackBtn = document.querySelector('.payment-back-btn');
    paymentBackBtn?.addEventListener('click', () => {
      step3?.classList.remove('active');
      step2?.classList.add('active');
    });

    // Step 2: Form Submission
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Collect form data
      const formData = {
        registrationType,
        fullName: (document.getElementById('full-name') as HTMLInputElement)?.value,
        email: (document.getElementById('email') as HTMLInputElement)?.value,
        phone: (document.getElementById('phone') as HTMLInputElement)?.value,
        college: (document.getElementById('college') as HTMLInputElement)?.value,
        department: (document.getElementById('dept') as HTMLInputElement)?.value,
        year: (document.getElementById('year') as HTMLSelectElement)?.value,
        track: (document.getElementById('track') as HTMLSelectElement)?.value,
        projectName: (document.getElementById('project-name') as HTMLInputElement)?.value,
        teamName: registrationType === 'team' ? (document.getElementById('team-name') as HTMLInputElement)?.value : null,
      };

      // Move to payment step
      step2?.classList.remove('active');
      step3?.classList.add('active');

      // Show loading state
      const loadingEl = document.getElementById('payment-loading');
      const detailsEl = document.getElementById('payment-details');
      const errorEl = document.getElementById('payment-error');
      
      if (loadingEl) loadingEl.style.display = 'block';
      if (detailsEl) detailsEl.style.display = 'none';
      if (errorEl) errorEl.style.display = 'none';

      // TODO: Backend API not implemented yet
      // Temporarily just show loading state without calling the API
      // This prevents 500 errors in console
      
      /* UNCOMMENT WHEN BACKEND IS READY:
      
      try {
        // Call payment API
        const response = await fetch('/api/create-payment', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(formData),
        });

        if (!response.ok) {
          throw new Error('Payment creation failed');
        }

        const paymentData = await response.json();

        // Hide loading, show details
        if (loadingEl) loadingEl.style.display = 'none';
        if (detailsEl) detailsEl.style.display = 'block';

        // Display amount
        const amountEl = document.getElementById('payment-amount');
        if (amountEl) amountEl.textContent = `‚Çπ${paymentData.amount}`;

        // Display order ID
        const orderIdEl = document.getElementById('display-order-id');
        if (orderIdEl) orderIdEl.textContent = paymentData.orderId;

        // Generate QR Code
        const qrContainer = document.getElementById('qr-code-container');
        if (qrContainer && paymentData.qrCodeData) {
          try {
            // Use node-qrcode library
            const qrUrl = await QRCode.toDataURL(paymentData.qrCodeData, {
              width: 200,
              margin: 2,
              color: {
                dark: '#000000',
                light: '#ffffff'
              }
            });
            
            qrContainer.innerHTML = `<img src="${qrUrl}" alt="Payment QR Code" style="width: 200px; height: 200px; display: block;" />`;
          } catch (err) {
            console.error('QR Code generation failed', err);
            // Fallback: show text
            qrContainer.innerHTML = `<p>QR Code: ${paymentData.qrCodeData}</p>`;
          }
        }

        // Setup online payment button
        const payOnlineBtn = document.getElementById('pay-online-btn');
        if (payOnlineBtn) {
          payOnlineBtn.addEventListener('click', () => {
            window.location.href = paymentData.paymentUrl;
          });
        }

      } catch (error) {
        console.error('Payment error:', error);
        
        // Hide loading, show error
        if (loadingEl) loadingEl.style.display = 'none';
        if (errorEl) errorEl.style.display = 'block';


        // Setup retry button
        const retryBtn = document.querySelector('.retry-payment-btn');
        retryBtn?.addEventListener('click', () => {
          // Go back to form
          step3?.classList.remove('active');
          step2?.classList.add('active');
        });
      }
      
      */
      // END OF COMMENTED CODE - Uncomment above when backend is ready
    });

    function resetForm() {
      step1?.classList.add('active');
      step2?.classList.remove('active');
      step3?.classList.remove('active');
      // @ts-ignore
      form?.reset();
    }
  });
</script>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2000;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  .modal[data-open="true"] {
    opacity: 1;
    pointer-events: all;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    background: white;
    width: 90%;
    max-width: 600px;
    padding: 2rem;
    border-radius: 1rem;
    position: relative;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(20px);
    transition: transform 0.3s;
    max-height: 90vh;
    overflow-y: auto;
    pointer-events: auto;
  }

  .modal-content * {
    pointer-events: auto;
  }

  .modal[data-open="true"] .modal-content {
    transform: translateY(0);
  }

  .close-btn {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    background: none;
    border: none;
    font-size: 2rem;
    line-height: 1;
    color: #64748b;
    padding: 0.5rem;
    cursor: pointer;
    transition: color 0.2s;
    z-index: 10;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-btn:hover {
    color: #0f172a;
  }

  .step {
    display: none;
    animation: fadeIn 0.4s;
  }

  .step.active {
    display: block;
  }

  /* Step 1 Styles */
  .options {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .type-btn {
    background: #f1f5f9;
    border: 2px solid transparent;
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: all 0.2s;
  }

  .type-btn:hover {
    border-color: var(--color-s-primary);
    background: #e0f2fe;
  }

  .icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
  }

  /* Form Styles */
  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .full-width {
    grid-column: span 2;
  }

  label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #475569;
  }

  input, select {
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    background: #f8fafc;
  }

  input:focus, select:focus {
    outline: none;
    border-color: var(--color-s-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .actions {
    margin-top: 2rem;
    display: flex;
    justify-content: space-between;
  }

  .submit-btn {
    background: var(--color-s-primary);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
  }

  .back-btn {
    background: transparent;
    color: var(--color-s-primary);
    border: 2px solid #e2e8f0;
    padding: 0.875rem 1.75rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }

  .back-btn::before {
    content: '‚Üê';
    font-size: 1.25rem;
    transition: transform 0.2s;
  }

  .back-btn:hover {
    background: #f8fafc;
    border-color: var(--color-s-primary);
    transform: translateX(-3px);
  }

  .back-btn:hover::before {
    transform: translateX(-4px);
  }

  .back-btn:active {
    transform: translateX(0);
  }

  /* Payment Placeholder */
  .payment-back-btn,
  .step1-back-btn {
    background: transparent;
    color: var(--color-s-primary);
    border: 2px solid #e2e8f0;
    padding: 0.875rem 1.75rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }

  .payment-back-btn::before,
  .step1-back-btn::before {
    content: '‚Üê';
    font-size: 1.25rem;
    transition: transform 0.2s;
  }

  .payment-back-btn:hover,
  .step1-back-btn:hover {
    background: #f8fafc;
    border-color: var(--color-s-primary);
    transform: translateX(-3px);
  }

  .payment-back-btn:hover::before,
  .step1-back-btn:hover::before {
    transform: translateX(-4px);
  }

  .payment-back-btn:active,
  .step1-back-btn:active {
    transform: translateX(0);
  }

  /* Payment Placeholder */
  .payment-loading {
    text-align: center;
    padding: 3rem 0;
  }

  .payment-details {
    padding: 1rem 0;
  }

  .amount-display {
    background: linear-gradient(135deg, var(--color-s-primary) 0%, var(--color-s-accent) 100%);
    padding: 1.5rem;
    border-radius: 1rem;
    text-align: center;
    margin-bottom: 2rem;
  }

  .amount-display .label {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.875rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .amount-display .amount {
    color: white;
    font-size: 2rem;
    font-weight: 700;
  }

  .qr-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  .qr-section h3 {
    font-size: 1rem;
    color: var(--color-s-primary-dark);
    margin-bottom: 1rem;
  }

  .qr-code {
    display: flex;
    justify-content: center;
    margin: 1rem auto;
    padding: 1rem;
    background: white;
    border: 2px solid #e2e8f0;
    border-radius: 0.5rem;
    width: fit-content;
  }

  .qr-note {
    font-size: 0.875rem;
    color: #64748b;
    margin-top: 0.5rem;
  }

  .divider {
    text-align: center;
    position: relative;
    margin: 2rem 0;
  }

  .divider span {
    background: white;
    padding: 0 1rem;
    color: #94a3b8;
    font-size: 0.875rem;
    position: relative;
    z-index: 1;
  }

  .divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #e2e8f0;
  }

  .pay-online-btn {
    width: 100%;
    background: var(--color-s-primary);
    color: white;
    border: none;
    padding: 1rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    margin-bottom: 1rem;
  }

  .pay-online-btn:hover {
    background: var(--color-s-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(30, 90, 157, 0.3);
  }

  .payment-info {
    text-align: center;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 0.5rem;
  }

  .info-text {
    font-size: 0.875rem;
    color: #64748b;
    margin: 0;
  }

  .info-text span {
    color: var(--color-s-primary);
    font-weight: 600;
  }

  .payment-error {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
    border-radius: 1rem;
    border: 2px solid #fecaca;
    animation: slideUp 0.3s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .error-icon {
    width: 80px;
    height: 80px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.15);
  }

  .error-icon svg {
    color: #ef4444;
    animation: errorPulse 2s ease-in-out infinite;
  }

  @keyframes errorPulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  .error-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #991b1b;
    margin-bottom: 0.75rem;
  }

  .error-message {
    color: #7f1d1d;
    margin-bottom: 2rem;
    line-height: 1.6;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .error-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .retry-payment-btn {
    background: #ef4444;
    color: white;
    border: none;
    padding: 0.875rem 2rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
  }

  .retry-payment-btn:hover {
    background: #dc2626;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
  }

  .retry-payment-btn:active {
    transform: translateY(0);
  }

  .retry-payment-btn svg {
    animation: rotate 2s linear infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .loader {
    width: 40px;
    height: 40px;
    border: 4px solid #e2e8f0;
    border-top-color: var(--color-s-primary);
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 640px) {
    .options { grid-template-columns: 1fr; }
    .form-grid { grid-template-columns: 1fr; }
    .full-width { grid-column: auto; }

    .modal-content {
      width: 100%;
      height: 100%;
      max-height: 100vh;
      border-radius: 0;
      padding: 1.5rem;
    }

    .type-btn {
      padding: 1.5rem;
    }

    h2 {
      font-size: 1.375rem;
    }

    .submit-btn,
    .pay-online-btn {
      padding: 0.875rem;
    }

    .error-actions {
      flex-direction: column;
    }

    .payment-error {
      padding: 2rem 1rem;
    }

    .close-btn {
      top: 0.75rem;
      right: 0.75rem;
    }
  }
</style>
