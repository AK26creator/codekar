<div id="registration-modal" class="modal" aria-hidden="false" data-open="false">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    
    <div id="step-1" class="step active">
      <h2>Registration Type</h2>
      <div class="options">
        <button class="type-btn" data-type="individual">
          <span class="icon">üë§</span>
          <h3>Individual</h3>
          <p>Register as a solo participant.</p>
        </button>
        <button class="type-btn" data-type="team">
          <span class="icon">üë•</span>
          <h3>Team</h3>
          <p>Register with your squad (2-4 members).</p>
        </button>
      </div>
      <div class="actions" style="margin-top: 1.5rem;">
        <button type="button" class="step1-back-btn">Back</button>
      </div>
    </div>

    <div id="step-2" class="step">
      <h2 id="form-title">Individual Registration</h2>
      <form id="reg-form">
        <div class="form-grid">
          <div class="field">
            <label for="full-name">Full Name</label>
            <input type="text" id="full-name" required placeholder="John Doe">
          </div>
          
          <div class="field" id="team-name-field" style="display:none;">
            <label for="team-name">Team Name</label>
            <input type="text" id="team-name" placeholder="Code Warriors">
          </div>

          <!-- Team Members Fields (Hidden for Individual) -->
          <div class="field team-member-field" style="display:none;">
             <label for="member-2">Team Member 2 Name</label>
             <input type="text" id="member-2" placeholder="Member Name">
          </div>
          <div class="field team-member-field" style="display:none;">
             <label for="member-3">Team Member 3 Name</label>
             <input type="text" id="member-3" placeholder="Member Name">
          </div>
          <div class="field team-member-field" style="display:none;">
             <label for="member-4">Team Member 4 Name</label>
             <input type="text" id="member-4" placeholder="Member Name">
          </div>

          <div class="field">
            <label for="email">Email ID</label>
            <input type="email" id="email" required placeholder="john@example.com">
          </div>

          <div class="field">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" required placeholder="+91 9876543210">
          </div>

          <div class="field">
            <label for="college">College Name</label>
            <input type="text" id="college" required placeholder="IIT Bombay">
          </div>

          <div class="field">
            <label for="dept">Department</label>
            <input type="text" id="dept" required placeholder="Computer Science">
          </div>

          <div class="field">
            <label for="year">Year of Study</label>
            <select id="year" required>
              <option value="">Select Year</option>
              <option value="1">1st Year</option>
              <option value="2">2nd Year</option>
              <option value="3">3rd Year</option>
              <option value="4">4th Year</option>
            </select>
          </div>

          <div class="field">
            <label for="track">Project Track</label>
            <select id="track" required>
              <option value="">Select Track</option>
              <option value="education">Education</option>
              <option value="entertainment">Entertainment</option>
              <option value="ai-agents">AI Agents & Automations</option>
              <option value="core-ai">Core AI & ML</option>
              <option value="big-data">Big Data</option>
              <option value="cutting-edge">Cutting-edge Agents</option>
            </select>
          </div>
          
          <div class="field full-width">
            <label for="project-name">Project Name (Idea)</label>
            <input type="text" id="project-name" required placeholder="Project X">
          </div>

          <div class="field full-width checkbox-field">
            <label class="checkbox-container">
              <input type="checkbox" id="declaration" required>
              <span class="checkmark"></span>
              <span class="label-text">
                I hereby declare that all my details are correct and I will follow all the rules and regulations by the organization. Any wrong behavior in the WhatsApp group will disqualify the team and no refund will be given.
              </span>
            </label>
          </div>
        </div>
        
        <div class="actions">
          <button type="button" class="back-btn">Back</button>
          <button type="submit" class="submit-btn">Proceed to Payment</button>
        </div>
      </form>
    </div>

    <!-- Step 3: Payment Loading Mock -->
    <div id="step-3" class="step">
      <div class="payment-loading" style="text-align: center; padding: 3rem 0;">
        <div class="loader-placeholder"></div>
        <h2 style="margin-top: 1.5rem;">Redirecting to Payment...</h2>
        <p style="color: #64748b; margin-top: 0.5rem;">Please do not refresh the page.</p>
      </div>
      <div class="actions" style="margin-top: 2rem; display: flex; justify-content: center;">
         <button type="button" class="payment-back-btn">Cancel & Go Back</button>
      </div>
    </div>
  </div>
</div>

<script>
  // Wait for DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', () => {
    // DOM Elements
    const modal = document.getElementById('registration-modal');
    const overlay = document.querySelector('.modal-overlay');
    const typeBtns = document.querySelectorAll('.type-btn');
    const step1 = document.getElementById('step-1');
    const step2 = document.getElementById('step-2');
    const step3 = document.getElementById('step-3');
    const backBtn = document.querySelector('.back-btn');
    const form = document.getElementById('reg-form');
    const teamNameField = document.getElementById('team-name-field');
    const formTitle = document.getElementById('form-title');

    let registrationType = 'individual';

    // Handle scroll locking with Lenis
    if (modal) {
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.type === 'attributes' && mutation.attributeName === 'data-open') {
            const isOpen = modal.dataset.open === 'true';
            if (isOpen) {
              document.body.style.overflow = 'hidden';
              if ((window as any).lenis) (window as any).lenis.stop();
            } else {
              document.body.style.overflow = '';
              if ((window as any).lenis) (window as any).lenis.start();
            }
          }
        });
      });

      observer.observe(modal, { attributes: true });
    }

    // Close Modal Function
    function closeModal() {
      if (modal) {
        modal.dataset.open = "false";
        modal.setAttribute('aria-hidden', 'true');
        // Overflow and lenis are handled by observer
        
        // Reset to step 1 after close animation
        setTimeout(() => {
          resetForm();
        }, 3000);
      }
    }

    // Overlay click to close
    if (overlay) {
      overlay.addEventListener('click', () => {
        closeModal();
      });
    }

    // ESC key to close modal
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.dataset.open === "true") {
        closeModal();
      }
    });

    // Step 1: Selection
    typeBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // @ts-ignore
        registrationType = btn.dataset.type;
        
        if (registrationType === 'team') {
          if(teamNameField) teamNameField.style.display = 'block';
          if(formTitle) formTitle.textContent = 'Team Registration';
          document.getElementById('team-name')?.setAttribute('required', 'true');
          
          // Show team member fields
          document.querySelectorAll('.team-member-field').forEach(el => {
            (el as HTMLElement).style.display = 'flex';
          });
          
          // Update labels for Team Lead
          const nameLabel = document.querySelector('label[for="full-name"]');
          if(nameLabel) nameLabel.textContent = "Team Lead Name";
          
          const emailLabel = document.querySelector('label[for="email"]');
          if(emailLabel) emailLabel.textContent = "Team Lead Email (Main ID)";

        } else {
          if(teamNameField) teamNameField.style.display = 'none';
          if(formTitle) formTitle.textContent = 'Individual Registration';
          document.getElementById('team-name')?.removeAttribute('required');
          
          // Hide team member fields
          document.querySelectorAll('.team-member-field').forEach(el => {
            (el as HTMLElement).style.display = 'none';
          });

          // Revert labels
          const nameLabel = document.querySelector('label[for="full-name"]');
          if(nameLabel) nameLabel.textContent = "Full Name";
          
          const emailLabel = document.querySelector('label[for="email"]');
          if(emailLabel) emailLabel.textContent = "Email ID";
        }

        step1?.classList.remove('active');
        step2?.classList.add('active');
      });
    });

    // Step 1 Back Button (closes modal)
    const step1BackBtn = document.querySelector('.step1-back-btn');
    step1BackBtn?.addEventListener('click', () => {
      closeModal();
    });

    // Step 2 Back Button (goes back to step 1)
    backBtn?.addEventListener('click', () => {
      step2?.classList.remove('active');
      step1?.classList.add('active');
    });

    // Payment Back Button
    const paymentBackBtn = document.querySelector('.payment-back-btn');
    paymentBackBtn?.addEventListener('click', () => {
      step3?.classList.remove('active');
      step2?.classList.add('active');
    });

    // Step 2: Form Submission Logic Reverted
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const submitBtn = form.querySelector('.submit-btn') as HTMLButtonElement;
      if (submitBtn) {
        submitBtn.innerText = 'Processing...';
        submitBtn.disabled = true;
      }
      
      // Move to step 3 (Loading screen)
      step2?.classList.remove('active');
      step3?.classList.add('active');

      // Simulate a redirect to the payment gateway
      setTimeout(() => {
        const amount = registrationType === 'team' ? '1000' : '300';
        window.location.href = `/payment/mock-gateway?amount=${amount}`;
      }, 1500);
    });

    function resetForm() {
      step1?.classList.add('active');
      step2?.classList.remove('active');
      step3?.classList.remove('active');
      // @ts-ignore
      form?.reset();
    }
  });

</script>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2000;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  .modal[data-open="true"] {
    opacity: 1;
    pointer-events: all;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    background: white;
    width: 90%;
    max-width: 600px;
    padding: 2rem;
    border-radius: 1rem;
    position: relative;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(20px);
    transition: transform 0.3s;
    max-height: 90vh;
    overflow-y: auto;
    pointer-events: auto;
  }

  .modal-content * {
    pointer-events: auto;
  }

  .modal[data-open="true"] .modal-content {
    transform: translateY(0);
  }

  .close-btn {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    background: none;
    border: none;
    font-size: 2rem;
    line-height: 1;
    color: #64748b;
    padding: 0.5rem;
    cursor: pointer;
    transition: color 0.2s;
    z-index: 10;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-btn:hover {
    color: #0f172a;
  }

  .step {
    display: none;
    animation: fadeIn 0.4s;
  }

  .step.active {
    display: block;
  }

  /* Step 1 Styles */
  .options {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .type-btn {
    background: #f1f5f9;
    border: 2px solid transparent;
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: all 0.2s;
  }

  .type-btn:hover {
    border-color: var(--color-s-primary);
    background: #e0f2fe;
  }

  .icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
  }

  /* Form Styles */
  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .full-width {
    grid-column: span 2;
  }

  /* Checkbox Styles */
  .checkbox-field {
    margin-top: 1rem;
  }

  .checkbox-container {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: #475569;
    line-height: 1.5;
    position: relative;
    padding-left: 0;
  }

  .checkbox-container input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
  }

  .checkmark {
    position: relative;
    height: 20px;
    width: 20px;
    background-color: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    flex-shrink: 0;
    transition: all 0.2s;
    margin-top: 2px;
  }

  .checkbox-container:hover input ~ .checkmark {
    border-color: var(--color-s-primary);
  }

  .checkbox-container input:checked ~ .checkmark {
    background-color: var(--color-s-primary);
    border-color: var(--color-s-primary);
  }

  .checkmark:after {
    content: "";
    position: absolute;
    display: none;
  }

  .checkbox-container input:checked ~ .checkmark:after {
    display: block;
  }

  .checkbox-container .checkmark:after {
    left: 7px;
    top: 3px;
    width: 5px;
    height: 10px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }

  label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #475569;
  }

  input, select {
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    background: #f8fafc;
  }

  input:focus, select:focus {
    outline: none;
    border-color: var(--color-s-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .actions {
    margin-top: 2rem;
    display: flex;
    justify-content: space-between;
  }

  .submit-btn {
    background: var(--color-s-primary);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
  }

  .back-btn {
    background: transparent;
    color: var(--color-s-primary);
    border: 2px solid #e2e8f0;
    padding: 0.875rem 1.75rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }

  .back-btn::before {
    content: '‚Üê';
    font-size: 1.25rem;
    transition: transform 0.2s;
  }

  .back-btn:hover {
    background: #f8fafc;
    border-color: var(--color-s-primary);
    transform: translateX(-3px);
  }

  .back-btn:hover::before {
    transform: translateX(-4px);
  }

  .back-btn:active {
    transform: translateX(0);
  }

  /* Payment Placeholder */
  .payment-back-btn,
  .step1-back-btn {
    background: transparent;
    color: var(--color-s-primary);
    border: 2px solid #e2e8f0;
    padding: 0.875rem 1.75rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }

  .payment-back-btn::before,
  .step1-back-btn::before {
    content: '‚Üê';
    font-size: 1.25rem;
    transition: transform 0.2s;
  }

  .payment-back-btn:hover,
  .step1-back-btn:hover {
    background: #f8fafc;
    border-color: var(--color-s-primary);
    transform: translateX(-3px);
  }

  .payment-back-btn:hover::before,
  .step1-back-btn:hover::before {
    transform: translateX(-4px);
  }

  .payment-back-btn:active,
  .step1-back-btn:active {
    transform: translateX(0);
  }

  .loader {
    width: 40px;
    height: 40px;
    border: 4px solid #e2e8f0;
    border-top-color: var(--color-s-primary);
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 640px) {
    .options { grid-template-columns: 1fr; }
    .form-grid { grid-template-columns: 1fr; }
    .full-width { grid-column: auto; }

    .modal-content {
      width: 100%;
      height: 100%;
      max-height: 100vh;
      border-radius: 0;
      padding: 1.5rem;
    }

    .type-btn {
      padding: 1.5rem;
    }

    h2 {
      font-size: 1.375rem;
    }

    .submit-btn {
      padding: 0.875rem;
    }

    .error-actions {
      flex-direction: column;
    }

    .payment-error {
      padding: 2rem 1rem;
    }

    .close-btn {
      top: 0.75rem;
      right: 0.75rem;
    }
  }
</style>
