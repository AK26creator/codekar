---
const { hideCTA = false } = Astro.props;
---
<header id="main-header">
  <div class="container header-content">
    <div class="logo">
      <a href="/">KODEKAR</a>
    </div>
    
    <!-- Hamburger Button (mobile only) -->
    <button id="hamburger-btn" class="hamburger" aria-label="Toggle navigation" aria-expanded="false">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <nav id="nav-menu">
      <ul>
        <li><a href="/#home" class="nav-link">Home</a></li>
        <li><a href="/#tracks" class="nav-link">Tracks</a></li>
        <!-- <li><a href="/#prizes" class="nav-link">Prizes</a></li> -->
        <li><a href="/#about" class="nav-link">About</a></li>
        <li><a href="/#sponsors" class="nav-link">Sponsors</a></li>
        <li><a href="/#faq" class="nav-link">FAQ</a></li>
      </ul>
    </nav>
    {!hideCTA && <button id="apply-btn" class="cta-button">Apply Now</button>}
  </div>
  <!-- Mobile backdrop overlay -->
  <div id="nav-backdrop" class="nav-backdrop"></div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Sticky Header Logic
    const header = document.getElementById('main-header');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }
    });

    // Open Registration Modal
    const applyBtn = document.getElementById('apply-btn');
    applyBtn?.addEventListener('click', () => {
      const modal = document.getElementById('registration-modal');
      if (modal) {
        modal.dataset.open = "true";
        document.body.classList.add('scroll-locked');
      } else {
        console.error('Registration modal not found');
      }
    });

    // Hamburger Menu Toggle
    const hamburger = document.getElementById('hamburger-btn');
    const navMenu = document.getElementById('nav-menu');
    const navBackdrop = document.getElementById('nav-backdrop');

    function openMobileNav() {
      navMenu?.classList.add('open');
      hamburger?.classList.add('active');
      hamburger?.setAttribute('aria-expanded', 'true');
      navBackdrop?.classList.add('active');
      document.body.classList.add('scroll-locked');
    }

    function closeMobileNav() {
      navMenu?.classList.remove('open');
      hamburger?.classList.remove('active');
      hamburger?.setAttribute('aria-expanded', 'false');
      navBackdrop?.classList.remove('active');
      document.body.classList.remove('scroll-locked');
    }

    hamburger?.addEventListener('click', () => {
      if (navMenu?.classList.contains('open')) {
        closeMobileNav();
      } else {
        openMobileNav();
      }
    });

    // Close on backdrop click
    navBackdrop?.addEventListener('click', closeMobileNav);

    // Smooth scroll helper: scrolls to a hash target without page reload
    function smoothScrollTo(hash: string) {
      const targetId = hash.replace('#', '');
      const targetEl = document.getElementById(targetId);
      if (!targetEl) return false;

      const lenis = (window as any).lenis;
      if (lenis) {
        lenis.scrollTo(targetEl, { offset: -80 }); // offset for sticky header
      } else {
        targetEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }

      // Update URL hash without triggering navigation
      history.pushState(null, '', hash);
      return true;
    }

    // Intercept all hash-based navigation links on the page
    // This covers both Header nav links AND Footer quick links
    const allHashLinks = document.querySelectorAll('a[href^="/#"], a[href^="#"]');
    
    // More robust home page check
    const isHomePage = window.location.pathname === '/' || 
                       window.location.pathname === '/index.html' || 
                       window.location.pathname.endsWith('/');

    allHashLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const href = (link as HTMLAnchorElement).getAttribute('href') || '';
        // Handle both "/#about" and "#about"
        const hash = href.includes('#') ? '#' + href.split('#')[1] : '';
        
        // Always close mobile nav when a link is clicked
        closeMobileNav();

        if (isHomePage && hash && hash !== '#') {
          const targetEl = document.querySelector(hash);
          if (targetEl) {
            e.preventDefault();
            smoothScrollTo(hash);
          }
        }
        // On other pages or if target doesn't exist, let browser navigate naturally
      });
    });

    // Also close mobile nav on OTHER (non-hash) links
    const otherLinks = document.querySelectorAll('nav a:not([href^="/#"]):not([href^="#"])');
    otherLinks.forEach(link => {
      link.addEventListener('click', () => closeMobileNav());
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeMobileNav();
    });

    // Set active link based on current page/hash
    const navLinks = document.querySelectorAll('.nav-link');

    const setActiveLink = () => {
      const currentPath = window.location.pathname;
      const currentHash = window.location.hash;
      
      navLinks.forEach((link) => {
        const href = (link as HTMLAnchorElement).getAttribute('href') || '';
        if (
          (currentPath === '/' && href === '/#home') ||
          (href.includes(currentPath) && currentPath !== '/') ||
          (currentHash && href.includes(currentHash))
        ) {
          link.classList.add('active');
        } else {
          link.classList.remove('active');
        }
      });
    };

    setActiveLink();
    window.addEventListener('hashchange', setActiveLink);

    // On page load, if there's a hash in the URL, scroll to it smoothly
    if (isHomePage && window.location.hash) {
      // Small delay to ensure Lenis is initialized
      setTimeout(() => {
        smoothScrollTo(window.location.hash);
      }, 300);
    }
  });
</script>

<style>
  header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    padding: 1rem 0;
    background: transparent;
    transition: all 0.3s ease;
  }
  
  header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    background: var(--surface-gradient);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.4);
    padding: 0.75rem 0;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    z-index: 1002;
  }

  .logo a {
    font-size: clamp(1.2rem, 4vw, 1.5rem);
    font-weight: 800;
    letter-spacing: -0.05em;
    background: linear-gradient(135deg, var(--color-s-primary), var(--color-s-primary-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    cursor: pointer;
    white-space: nowrap;
  }

  /* ===== Hamburger Button (Mobile Default) ===== */
  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    width: 44px;
    height: 44px; /* Min touch target */
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.08);
    cursor: pointer;
    padding: 8px;
    z-index: 1010; /* Higher than nav to stay clickable */
    border-radius: 10px;
    transition: background 0.2s;
    order: 3; /* Hamburger always on right in mobile flex */
    touch-action: manipulation;
  }

  .hamburger:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .hamburger-line {
    display: block;
    width: 22px;
    height: 2.5px;
    background: #1e293b;
    border-radius: 3px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ===== Nav Backdrop ===== */
  .nav-backdrop {
    display: none; /* JS toggles this */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 998;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .nav-backdrop.active {
    display: block;
    opacity: 1;
    pointer-events: all;
  }

  /* ===== Mobile Nav (Default) ===== */
  nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: min(300px, 85vw);
    height: 100vh;
    height: 100dvh;
    background: white;
    padding: 6rem 1.5rem 2rem;
    z-index: 999;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
    transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    visibility: hidden;
    pointer-events: none;
  }

  nav.open {
    right: 0;
    visibility: visible;
    pointer-events: auto;
  }

  nav ul {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
  }

  nav a {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-s-primary-dark);
    border-radius: 0.75rem;
    min-height: 44px; /* Touch target */
    transition: all 0.2s ease;
  }

  nav a:hover {
    background: rgba(73, 118, 159, 0.1);
    color: var(--color-s-primary);
  }
  
  nav a.active {
    color: var(--color-s-primary);
    background: rgba(73, 118, 159, 0.05);
  }

  /* Apply Button Mobile */
  .cta-button {
    /* Base Skeuomorphic Styles matching .skeuo-btn */
    background: linear-gradient(145deg, var(--color-s-primary), var(--color-s-primary-dark));
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
    min-height: 44px; /* Touch target */
    display: flex;
    align-items: center;
    justify-content: center;
    order: 2;
    box-shadow: 4px 4px 8px rgba(10, 65, 116, 0.3), -4px -4px 8px rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 1010;
    touch-action: manipulation;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 6px 6px 12px rgba(10, 65, 116, 0.4), -6px -6px 12px rgba(255, 255, 255, 0.3);
  }

  .cta-button:active {
    transform: translateY(1px);
    box-shadow: inset 3px 3px 6px rgba(0, 0, 0, 0.2), inset -3px -3px 6px rgba(255, 255, 255, 0.1);
  }

  /* ===== Desktop Styles (min-width: 769px) ===== */
  @media (min-width: 769px) {
    header {
      padding: 1.5rem 0;
    }

    header.scrolled {
      padding: 1rem 0;
    }

    .hamburger {
      display: none;
    }

    .nav-backdrop {
      display: none !important;
    }

    nav {
      position: relative;
      top: auto;
      right: auto;
      width: auto;
      height: auto;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      padding: 0.5rem;
      border-radius: 9999px;
      box-shadow: none;
      overflow-y: visible;
      flex-direction: row;
      order: 2; /* Nav in middle on desktop */
    }

    nav ul {
      flex-direction: row;
      gap: 0.25rem;
      align-items: center;
    }

    nav a {
      font-size: 0.95rem;
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      justify-content: center;
    }
    
    nav a:hover {
      background: var(--color-s-primary);
      color: #ffffff;
    }
    
    nav a.active {
      color: var(--color-s-primary);
      background: rgba(73, 118, 159, 0.05);
      border-radius: 9999px;
    }

    .cta-button {
      font-size: 1rem;
      padding: 0.6rem 1.5rem;
      order: 3; /* Apply button on right on desktop */
    }
  }

  /* Small Mobile Adjustments */
  @media (max-width: 360px) {
     .logo a {
        font-size: 1.1rem;
     } 
     .cta-button {
        padding: 0.5rem 0.75rem;
        font-size: 0.85rem;
     }
  }
</style>
