<header id="main-header">
  <div class="container header-content">
    <div class="logo">
      <a href="/">CODEKAR</a>
    </div>
    
    <!-- Hamburger Button (mobile only) -->
    <button id="hamburger-btn" class="hamburger" aria-label="Toggle navigation" aria-expanded="false">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <nav id="nav-menu">
      <ul>
        <li><a href="/#home" class="nav-link">Home</a></li>
        <li><a href="/#tracks" class="nav-link">Tracks</a></li>
        <li><a href="/#prizes" class="nav-link">Prizes</a></li>
        <li><a href="/#about" class="nav-link">About</a></li>
        <li><a href="/#sponsors" class="nav-link">Sponsors</a></li>
        <li><a href="/#faq" class="nav-link">FAQ</a></li>
      </ul>
    </nav>
    <button id="apply-btn" class="cta-button">Apply Now</button>
  </div>
  <!-- Mobile backdrop overlay -->
  <div id="nav-backdrop" class="nav-backdrop"></div>
</header>

<script>
  // Sticky Header Logic
  const header = document.getElementById('main-header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });

  // Open Registration Modal
  const applyBtn = document.getElementById('apply-btn');
  applyBtn?.addEventListener('click', () => {
    const modal = document.getElementById('registration-modal');
    if (modal) {
      modal.dataset.open = "true";
      document.body.style.overflow = 'hidden';
    }
  });

  // Hamburger Menu Toggle
  const hamburger = document.getElementById('hamburger-btn');
  const navMenu = document.getElementById('nav-menu');
  const navBackdrop = document.getElementById('nav-backdrop');

  function openMobileNav() {
    navMenu?.classList.add('open');
    hamburger?.classList.add('active');
    hamburger?.setAttribute('aria-expanded', 'true');
    navBackdrop?.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeMobileNav() {
    navMenu?.classList.remove('open');
    hamburger?.classList.remove('active');
    hamburger?.setAttribute('aria-expanded', 'false');
    navBackdrop?.classList.remove('active');
    document.body.style.overflow = '';
  }

  hamburger?.addEventListener('click', () => {
    if (navMenu?.classList.contains('open')) {
      closeMobileNav();
    } else {
      openMobileNav();
    }
  });

  // Close on backdrop click
  navBackdrop?.addEventListener('click', closeMobileNav);

  // Close on nav link click (mobile)
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      closeMobileNav();
    });
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeMobileNav();
  });

  // Set active link based on current page/hash
  const setActiveLink = () => {
    const currentPath = window.location.pathname;
    const currentHash = window.location.hash;
    
    navLinks.forEach((link) => {
      const href = (link as HTMLAnchorElement).getAttribute('href') || '';
      if (
        (currentPath === '/' && href === '/#home') ||
        (href.includes(currentPath) && currentPath !== '/') ||
        (currentHash && href.includes(currentHash))
      ) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  };

  setActiveLink();
  window.addEventListener('hashchange', setActiveLink);
</script>

<style>
  header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    padding: 1.5rem 0;
    background: transparent;
    transition: all 0.3s ease;
  }
  
  header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 1rem 0;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.05em;
    background: linear-gradient(135deg, var(--color-s-primary), var(--color-s-primary-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    cursor: pointer;
  }

  /* ===== Hamburger Button ===== */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 6px;
    width: 44px;
    height: 44px;
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.08);
    cursor: pointer;
    padding: 8px;
    z-index: 1001;
    border-radius: 10px;
    transition: background 0.2s;
    order: 3;
  }

  .hamburger:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .hamburger-line {
    display: block;
    width: 22px;
    height: 2.5px;
    background: #1e293b;
    border-radius: 3px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ===== Nav Backdrop ===== */
  .nav-backdrop {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 998;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .nav-backdrop.active {
    opacity: 1;
    pointer-events: all;
  }

  /* ===== Desktop Nav ===== */
  nav {
    position: relative;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 0.5rem;
    border-radius: 9999px;
    z-index: 100;
  }

  nav ul {
    display: flex;
    gap: 0.25rem;
    position: relative;
  }

  nav a {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--color-s-primary-dark);
    transition: all 0.2s ease;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    position: relative;
    cursor: pointer;
    white-space: nowrap;
  }

  nav a:hover {
    color: #ffffff;
    background: var(--color-s-primary);
  }
  
  nav a.active {
    color: var(--color-s-primary);
  }

  .cta-button {
    background: var(--color-s-primary);
    color: white;
    border: none;
    padding: 0.6rem 1.25rem;
    border-radius: 9999px;
    font-weight: 600;
    transition: transform 0.2s, background-color 0.2s;
    cursor: pointer;
    white-space: nowrap;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    background: var(--color-s-primary-dark);
    box-shadow: 0 4px 12px rgba(30, 90, 157, 0.3);
  }

  /* ===== Responsive: Tablet & Below ===== */
  @media (max-width: 768px) {
    .header-content {
      flex-wrap: nowrap;
    }

    .hamburger {
      display: flex !important;
    }

    .nav-backdrop {
      display: block;
    }

    nav {
      position: fixed;
      top: 0;
      right: -100%;
      width: min(300px, 80vw);
      height: 100vh;
      background: white;
      border-radius: 0;
      padding: 5rem 2rem 2rem;
      z-index: 999;
      box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
      transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow-y: auto;
    }

    nav.open {
      right: 0;
    }

    nav ul {
      flex-direction: column;
      gap: 0.5rem;
    }

    nav a {
      display: block;
      padding: 0.875rem 1rem;
      font-size: 1.05rem;
      border-radius: 0.75rem;
      min-height: 44px;
      display: flex;
      align-items: center;
    }

    nav a:hover {
      background: rgba(73, 118, 159, 0.1);
      color: var(--color-s-primary);
    }

    .cta-button {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }
  }

  @media (max-width: 480px) {
    .logo a {
      font-size: 1.25rem;
    }

    .cta-button {
      padding: 0.45rem 0.875rem;
      font-size: 0.8rem;
    }
  }
</style>
