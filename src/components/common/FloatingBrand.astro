<div class="floating-brand">
  <div class="brand-text">
    <span data-letter>U</span>
    <span data-letter>N</span>
    <span data-letter>A</span>
    <span data-letter>I</span>
    <span class="brand-space"></span>
    <span data-letter>T</span>
    <span data-letter>E</span>
    <span data-letter>C</span>
    <span data-letter>H</span>
  </div>
</div>

<script>
  // Scroll-based letter reveal animation - starts at About section
  const letters = document.querySelectorAll('[data-letter]');
  const floatingBrand = document.querySelector('.floating-brand');
  let lastScrollY = window.scrollY;
  let isVisible = false;

  const revealLetters = () => {
    const currentScrollY = window.scrollY;
    const scrollDirection = currentScrollY > lastScrollY ? 'down' : 'up';
    
    // Get About section position
    const aboutSection = document.getElementById('about');
    let triggerPoint = 500; // Default fallback
    
    if (aboutSection) {
      const aboutRect = aboutSection.getBoundingClientRect();
      const aboutTop = aboutRect.top + currentScrollY;
      triggerPoint = aboutTop - window.innerHeight * 0.3; // Trigger when about section is 30% into view
    }
    
    // Hide floating brand when footer is in view
    const footer = document.querySelector('footer');
    if (footer && floatingBrand) {
      const footerRect = footer.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      
      // Hide if footer is in viewport
      if (footerRect.top < windowHeight) {
        floatingBrand.style.opacity = '0';
        floatingBrand.style.pointerEvents = 'none';
        lastScrollY = currentScrollY;
        return; // Exit early when footer is visible
      } else {
        floatingBrand.style.opacity = '1';
        floatingBrand.style.pointerEvents = 'auto';
      }
    }

    // Scroll UP - reveal letters
    if (scrollDirection === 'up' && currentScrollY > triggerPoint && !isVisible) {
      letters.forEach((letter, index) => {
        setTimeout(() => {
          letter.classList.add('visible');
        }, index * 80); // 80ms delay between each letter
      });
      isVisible = true;
    }
    
    // Scroll DOWN - hide letters
    if (scrollDirection === 'down' && isVisible) {
      letters.forEach((letter, index) => {
        setTimeout(() => {
          letter.classList.remove('visible');
        }, (letters.length - index - 1) * 40); // Reverse order, faster
      });
      isVisible = false;
    }
    
    lastScrollY = currentScrollY;
  };

  // Listen to scroll events
  window.addEventListener('scroll', revealLetters, { passive: true });
  
  // Initial check
  revealLetters();
</script>

<style>
  .floating-brand {
    position: fixed;
    left: 2rem;
    top: 50%;
    transform: translateY(-50%);
    z-index: 5;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .brand-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: flex-start;
  }

  .brand-text span {
    font-size: 3rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    color: rgba(37, 99, 235, 0.8);
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    pointer-events: auto;
    cursor: default;
  }

  .brand-text span.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .brand-text span:hover {
    color: rgba(37, 99, 235, 0.9);
    transform: translateY(-2px) scale(1.05);
    text-shadow: 0 2px 8px rgba(37, 99, 235, 0.4);
  }

  .brand-space {
    height: 1rem;
    opacity: 0 !important;
    pointer-events: none;
  }

  /* Responsive: Hide on mobile and tablet */
  @media (max-width: 1024px) {
    .floating-brand {
      display: none;
    }
  }

  /* Extra large screens - increase size */
  @media (min-width: 1920px) {
    .brand-text span {
      font-size: 2rem;
    }
    
    .floating-brand {
      left: 3rem;
    }
  }
</style>
