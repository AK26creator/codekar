<section id="home" class="hero">
  <div class="hero-content">
    <p class="subtitle">UNAI TECH PRESENTS</p>
    <h1 class="hero-title">
      <span class="letter letter-black">C</span>
      <span class="letter letter-black">O</span>
      <span class="letter letter-black">D</span>
      <span class="letter letter-black">E</span>
      <span class="letter letter-blue">K</span>
      <span class="letter letter-blue">A</span>
      <span class="letter letter-blue">R</span>
    </h1>
    <p class="tagline">Build. Innovate. Transform.</p>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-image: linear-gradient(135deg, rgba(248, 250, 252, 0.5) 0%, rgba(224, 231, 255, 0.5) 100%), url('/download%20(2).jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
  }

  .subtitle {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.3em;
    color: var(--color-s-primary);
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .hero-title {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 900;
    letter-spacing: -0.05em;
    margin-bottom: 1.5rem;
    display: flex;
    gap: 0.1em;
    justify-content: center;
  }

  .letter {
    display: inline-block;
    animation: float 3s ease-in-out infinite;
  }

  .letter-black {
    color: var(--color-s-primary-dark);
  }

  .letter-blue {
    background: linear-gradient(135deg, var(--color-s-gradient-start) 0%, var(--color-s-gradient-end) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .letter:nth-child(1) { animation-delay: 0s; }
  .letter:nth-child(2) { animation-delay: 0.1s; }
  .letter:nth-child(3) { animation-delay: 0.2s; }
  .letter:nth-child(4) { animation-delay: 0.3s; }
  .letter:nth-child(5) { animation-delay: 0.4s; }
  .letter:nth-child(6) { animation-delay: 0.5s; }
  .letter:nth-child(7) { animation-delay: 0.6s; }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .tagline {
    font-size: clamp(1rem, 2vw, 1.5rem);
    color: #475569;
    font-weight: 300;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .subtitle {
      font-size: 0.8rem;
      letter-spacing: 0.2em;
    }
    
    .hero-title {
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      height: 80vh;
    }
    
    .subtitle {
      font-size: 0.7rem;
      margin-bottom: 0.5rem;
    }
  }
</style>
