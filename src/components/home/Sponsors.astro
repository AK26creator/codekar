---
const sponsors = Array(4).fill({ name: "Sponsor Name", tier: "Gold" });
---
<section id="sponsors" class="section">
  <div class="container">
    <h2 class="section-title">Our Sponsors</h2>
    <div class="grid">
      {sponsors.map(sponsor => (
        <div class="sponsor-card">
          <div class="placeholder-logo">LOGO</div>
          <h3>{sponsor.name}</h3>
        </div>
      ))}
    </div>
    
    <!-- Highlighted Sponsor Challenges CTA -->
    <div class="challenges-highlight">
      <div class="highlight-content">
        <div class="highlight-icon">üèÜ</div>
        <h3>Sponsor Challenges</h3>
        <p>Tackle real-world problems from industry leaders and win exclusive prizes!</p>
        <a href="/sponsor-challenges" class="highlight-btn">
          View All Challenges
          <span class="arrow">‚Üí</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .section {
    padding: 6rem 0;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .sponsor-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid #e2e8f0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    aspect-ratio: 3/2;
    transition: transform 0.2s;
  }

  .sponsor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
  }

  .placeholder-logo {
    font-size: 2rem;
    font-weight: 800;
    color: #cbd5e1;
    margin-bottom: 0.5rem;
  }

  h3 {
    font-size: 1rem;
    color: #64748b;
  }

  /* Highlighted Sponsor Challenges Section */
  .challenges-highlight {
    margin-top: 3rem;
    background: linear-gradient(135deg, var(--color-s-gradient-start) 0%, var(--color-s-primary-dark) 100%);
    border-radius: 1.5rem;
    padding: 0.25rem;
    position: relative;
    overflow: hidden;
  }

  .challenge-card {
    background: linear-gradient(135deg, var(--color-s-gradient-start) 0%, var(--color-s-primary-dark) 100%);
    color: white;
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .challenges-highlight::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
  }

  .highlight-content {
    background: white;
    border-radius: 1.25rem;
    padding: 3rem;
    text-align: center;
    position: relative;
  }

  .highlight-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .highlight-content h3 {
    font-size: 2rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-s-primary), var(--color-s-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1rem;
  }

  .highlight-content p {
    font-size: 1.125rem;
    color: #64748b;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .highlight-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-s-primary);
    color: white;
    padding: 1rem 2rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 14px 0 rgba(30, 90, 157, 0.4);
  }

  .highlight-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px 0 rgba(30, 90, 157, 0.5);
    background: var(--color-s-primary-dark);
  }

  .arrow {
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .highlight-btn:hover .arrow {
    transform: translateX(5px);
  }
</style>
