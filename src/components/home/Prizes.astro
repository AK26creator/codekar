<section id="prizes" class="section">
    <div class="container">
      <h2 class="section-title">
        <span class="mask">
          <span class="reveal-text">Prizes</span>
        </span>
      </h2>
      <div class="minimal-content">
        <p>Revealing soon.</p>
      </div>
    </div>
  </section>
  
  <style>
    .section {
      padding: 6rem 0;
      background: #f1f5f9;
    }
  
    .minimal-content {
      text-align: center;
      padding: 4rem;
      border: 2px dashed #cbd5e1;
      border-radius: 1rem;
      color: #94a3b8;
      font-size: 1.5rem;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .section {
        padding: 4rem 0;
      }

      .minimal-content {
        padding: 2.5rem 1.5rem;
        font-size: 1.25rem;
      }
    }

    @media (max-width: 480px) {
      .section {
        padding: 3rem 0;
      }

      .minimal-content {
        padding: 2rem 1rem;
        font-size: 1.125rem;
      }
    }
  </style>
