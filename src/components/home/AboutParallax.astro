<section id="about" class="about-parallax-section">
  <div class="parallax-bg"></div>
  
  <div class="container content-layer">
    <!-- About Block (Center Fade-in) -->
    <div class="about-block scroll-reveal">
      <h2 class="section-title">About KODEKAR</h2>
      <div class="about-text">
        <p>
          KodeKar is a student-focused hackathon platform organized by UNAI TECH, dedicated to fostering 
          innovation through hands-on learning. UNAI TECH independently conducts hackathons and workshops 
          while collaborating with esteemed corporate companies and educational institutions to provide students 
          with industry exposure, mentorship, and growth opportunities. Our initiatives are designed to bridge 
          the gap between academic learning and real-world technology applications.
        </p>
      </div>
    </div>

    <!-- Mission & Vision Container -->
    <div class="mv-container">
      <!-- Mission Block (Slides from Left) -->
      <div class="mv-block mission-block scroll-reveal-left">
        <div class="mv-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/>
            <path d="M2 12h20"/>
          </svg>
        </div>
        <h3>Our Mission</h3>
        <p>
          To build a future-ready student ecosystem that encourages innovation, skill 
          development, and real-world impact through technology and industry collaboration.
        </p>
      </div>

      <!-- Vision Block (Slides from Right) -->
      <div class="mv-block vision-block scroll-reveal-right">
        <div class="mv-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
            <circle cx="12" cy="12" r="3"/>
          </svg>
        </div>
        <h3>Our Vision</h3>
        <p>
          To create meaningful opportunities for students by offering hands-on practical 
          experience, real-world project exposure, and internship opportunities with reputed 
          corporate institutionsâ€”preparing them for industry-ready careers.
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  // Parallax and Reveal Logic
  const section = document.querySelector('.about-parallax-section');
  const bg = document.querySelector('.parallax-bg');
  const aboutBlock = document.querySelector('.about-block');
  const missionBlock = document.querySelector('.mission-block');
  const visionBlock = document.querySelector('.vision-block');

  // 1. Intersection Observer for Reveal Animations
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.2
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('active');
        // Optional: Stop observing once revealed if you only want it to happen once
        // observer.unobserve(entry.target); 
      }
    });
  }, observerOptions);

  if (aboutBlock) observer.observe(aboutBlock);
  if (missionBlock) observer.observe(missionBlock);
  if (visionBlock) observer.observe(visionBlock);

  // 2. Parallax Scroll Effect REMOVED
  
  // Clean up: No scroll listener needed for parallax
</script>

<style>
  .about-parallax-section {
    position: relative;
    padding: 8rem 0;
    overflow: hidden;
    /* Subtle gradient background */
    background: linear-gradient(180deg, #f8fafc 0%, #eef2ff 100%);
  }

  .parallax-bg {
    position: absolute;
    top: -20%;
    left: 0;
    width: 100%;
    height: 140%; /* Taller for parallax movement */
    background-image: radial-gradient(circle at 10% 20%, rgba(37, 99, 235, 0.03) 0%, transparent 40%),
                      radial-gradient(circle at 90% 80%, rgba(59, 130, 246, 0.03) 0%, transparent 40%);
    z-index: 0;
    pointer-events: none;
    will-change: transform;
  }

  .content-layer {
    position: relative;
    z-index: 1;
  }

  /* About Block */
  .about-block {
    max-width: 900px;
    margin: 0 auto 6rem;
    text-align: center;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 1s ease-out, transform 1s ease-out;
  }

  .about-block.active {
    opacity: 1;
    transform: scale(1); /* JS scroll parallax might override this translateY, which is fine as scale is 1 */
    /* Note: if JS updates transform, it overwrites scale(1). 
       To combine, JS should write `scale(1) translateY(...)`. 
       For simplicity in this unified component, I'll rely on CSS for the entry 
       and let JS handle Y-axis parallax after a slight delay or simple separation.
       
       ACTUALLY, cleaner way: 
       Wrap inner content for entry animation, 
       use outer wrapper for parallax.
    */
  }
  
  .about-text p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #475569;
    text-align: justify;
    text-align-last: center; /* Center align the last line for aesthetics if desired, or just justify */
  }

  /* Mission & Vision Grid */
  .mv-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: flex-start;
  }

  .mv-block {
    opacity: 0;
    transition: opacity 1s ease-out, transform 1s ease-out;
  }

  /* Mission: Slide from Left */
  .scroll-reveal-left {
    transform: translateX(-50px);
  }
  
  .scroll-reveal-left.active {
    opacity: 1;
    transform: translateX(0);
  }

  /* Vision: Slide from Right */
  .scroll-reveal-right {
    transform: translateX(50px);
  }

  .scroll-reveal-right.active {
    opacity: 1;
    transform: translateX(0);
  }

  .mv-block h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .mv-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: white;
    border-radius: 12px;
    color: var(--color-s-primary);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    margin-bottom: 1rem;
  }

  .mv-block p {
    color: #64748b;
    line-height: 1.7;
    font-size: 1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .about-parallax-section {
      padding: 4rem 0;
    }

    .about-block {
      margin: 0 auto 3rem;
    }

    .mv-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .scroll-reveal-left, .scroll-reveal-right {
      transform: translateY(30px);
    }
    
    .scroll-reveal-left.active, .scroll-reveal-right.active {
      transform: translateY(0);
    }
    
    .about-text p {
      text-align: left;
      font-size: 1rem;
    }

    .mv-block h3 {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .about-parallax-section {
      padding: 3rem 0;
    }

    .about-block {
      margin: 0 auto 2rem;
    }

    .mv-container {
      gap: 1.5rem;
    }

    .about-text p {
      font-size: 0.9375rem;
      line-height: 1.7;
    }
  }
</style>
