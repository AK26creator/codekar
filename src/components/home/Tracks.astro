  }
];

import TrackModal from './TrackModal.astro';
---
<section id="tracks" class="section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Tracks</h2>
      <p class="section-subtitle">Choose your path and build the future</p>
    </div>

    <div class="tracks-grid">
      {tracks.map((track, index) => (
        <div 
          class="track-card clickable-card" 
          data-track-index={index}
          data-track-title={track.title}
          data-track-desc={track.description}
          data-track-extended={track.extendedDesc}
          data-track-icon={track.icon}
          data-track-examples={JSON.stringify(track.examples)}
          data-track-tech={JSON.stringify(track.technologies)}
        >
          <div class="card-inner">
            <div class="photo-container">
              <img src={track.icon} alt={track.title} class="track-icon" />
              <div class="photo-overlay"></div>
            </div>
            <div class="track-info">
              <h3 class="track-title">{track.title}</h3>
              <p class="track-desc">{track.description}</p>
              <div class="action-hint">
                <span class="view-text">View Details</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
    
  <!-- Track Details Modal -->
  <TrackModal />
</section>

<script>
  // Track Card Click Handlers
  const trackCards = document.querySelectorAll('.clickable-card');
  const modal = document.getElementById('track-modal');
  
  trackCards.forEach(card => {
    card.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      
      const title = target.dataset.trackTitle;
      const desc = target.dataset.trackDesc;
      const extended = target.dataset.trackExtended;
      const icon = target.dataset.trackIcon;
      const examples = JSON.parse(target.dataset.trackExamples || '[]');
      const tech = JSON.parse(target.dataset.trackTech || '[]');
      
      // Populate modal
      const modalTitle = document.getElementById('modal-title');
      const modalDesc = document.getElementById('modal-description');
      const modalExtended = document.getElementById('modal-extended-desc');
      const modalIconImg = document.getElementById('modal-icon-img') as HTMLImageElement;
      const modalExamples = document.getElementById('modal-examples');
      const modalTech = document.getElementById('modal-tech');
      
      if (modalTitle) modalTitle.textContent = title || '';
      if (modalDesc) modalDesc.textContent = desc || '';
      if (modalExtended) modalExtended.textContent = extended || '';
      if (modalIconImg) {
        modalIconImg.src = icon || '';
        modalIconImg.alt = title || '';
      }
      
      // Examples
      if (modalExamples) {
        modalExamples.innerHTML = examples.map((ex: string) => `<li>${ex}</li>`).join('');
      }
      
      // Technologies
      if (modalTech) {
        modalTech.innerHTML = tech.map((t: string) => `<span class="tech-tag">${t}</span>`).join('');
      }
      
      // Open modal using centralized function
      if ((window as any).openTrackModal) {
        (window as any).openTrackModal();
      }
    });
  });
</script>

<style>
  .section {
    padding: 6rem 0;
    background: #f8fafc;
  }
  


  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-s-primary) 0%, var(--color-s-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
  }

  .tracks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .track-card {
    perspective: 1000px;
    cursor: pointer;
  }

  .card-inner {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 2px solid transparent;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .track-card:hover .card-inner {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(37, 99, 235, 0.15);
    border-color: var(--color-s-light);
  }

  .photo-container {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto 1.5rem;
  }

  .track-icon {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--color-s-light);
    transition: all 0.3s ease;
    background: #f1f5f9;
    padding: 0;
  }

  .track-card:hover .track-icon {
    border-color: var(--color-s-primary);
    transform: scale(1.05);
  }

  .photo-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-s-primary) 0%, var(--color-s-accent) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .track-card:hover .photo-overlay {
    opacity: 0.1;
  }

  .track-info {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .track-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-s-primary-dark);
    margin-bottom: 0.75rem;
  }

  .track-desc {
    font-size: 0.95rem;
    color: #64748b;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .action-hint {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: var(--color-s-primary);
    font-weight: 600;
    font-size: 0.95rem;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .track-card:hover .action-hint {
    opacity: 1;
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .section {
      padding: 4rem 0;
    }
    
    .section-header {
      margin-bottom: 2.5rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .tracks-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .card-inner {
      padding: 1.5rem;
    }

    .photo-container {
      width: 100px;
      height: 100px;
      margin: 0 auto 1rem;
    }
  }

  @media (max-width: 480px) {
    .section {
      padding: 3rem 0;
    }

    .tracks-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .track-title {
      font-size: 1.1rem;
    }

    .track-desc {
      font-size: 0.875rem;
    }
  }
</style>
