---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Presentation - CODEKAR">
    <!-- Protected Route Logic -->
    <script>
        // Check for payment token
        const token = localStorage.getItem('payment_token');
        if (!token) {
            window.location.href = '/#registration'; 
        }
        
        // Optional: Verify token with server if needed for higher security
    </script>

    <div class="presentation-page">
        <div class="container">
            <h1>Welcome to the Hackathon!</h1>
            <p>Your payment was successful. You are now officially registered.</p>
            
            <div class="card">
                <h2>Next Steps</h2>
                <ol>
                    <li>Join the WhatsApp Community</li>
                    <li>Download the Information Deck</li>
                    <li>Prepare for the Pitch</li>
                </ol>
                
                <a href="https://whatsapp.com/channel/..." class="btn whatsapp-btn">Join WhatsApp Channel</a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .presentation-page {
        padding: 8rem 0;
        min-height: 100vh;
        background: #f8fafc;
        text-align: center;
    }
    
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    h1 {
        font-size: 3rem;
        color: var(--color-s-primary-dark);
        margin-bottom: 1rem;
    }
    
    .card {
        background: white;
        padding: 3rem;
        border-radius: 1.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        margin-top: 3rem;
    }
    
    ol {
        text-align: left;
        max-width: 400px;
        margin: 2rem auto;
        font-size: 1.25rem;
        color: #475569;
    }
    
    li {
        margin-bottom: 1rem;
    }
    
    .btn {
        display: inline-block;
        padding: 1rem 2rem;
        border-radius: 0.75rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }
    
    .whatsapp-btn {
        background: #25D366;
        color: white;
        margin-top: 2rem;
    }
    
    .whatsapp-btn:hover {
        background: #128C7E;
        transform: translateY(-2px);
    }
</style>
