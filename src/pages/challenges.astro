---
import Layout from '../layouts/Layout.astro';
import SponsorChallengeModal from '../components/home/SponsorChallengeModal.astro';

const challenges = [
  {
    sponsor: "TechCorp Solutions",
    title: "AI-Powered Analytics Dashboard",
    description: "Build an intelligent analytics dashboard that uses machine learning to provide real-time insights and predictions from large datasets.",
    prize: "₹50,000",
    difficulty: "Advanced",
    tags: ["AI/ML", "Data Analytics", "Visualization"],
    requirements: [
      "Real-time data processing",
      "Machine learning integration",
      "Interactive visualizations",
      "Scalable architecture"
    ]
  },
  {
    sponsor: "CloudServe Inc",
    title: "Serverless Deployment Platform",
    description: "Create a platform that simplifies deploying and managing serverless applications with automatic scaling and monitoring.",
    prize: "₹40,000",
    difficulty: "Intermediate",
    tags: ["Cloud", "DevOps", "Backend"],
    requirements: [
      "Multi-cloud support",
      "CI/CD integration",
      "Cost optimization features",
      "Real-time monitoring dashboard"
    ]
  },
  {
    sponsor: "FinanceHub",
    title: "Personal Finance Manager",
    description: "Develop a smart personal finance app with expense tracking, budget planning, and AI-powered financial insights.",
    prize: "₹35,000",
    difficulty: "Intermediate",
    tags: ["FinTech", "Mobile", "AI"],
    requirements: [
      "Expense categorization",
      "Budget recommendations",
      "Multi-currency support",
      "Data security & encryption"
    ]
  },
  {
    sponsor: "EduTech Solutions",
    title: "Virtual Classroom Platform",
    description: "Build an interactive virtual classroom with real-time collaboration, whiteboard, and AI-powered student engagement tracking.",
    prize: "₹45,000",
    difficulty: "Advanced",
    tags: ["EdTech", "WebRTC", "AI"],
    requirements: [
      "Video conferencing integration",
      "Interactive whiteboard",
      "Student engagement analytics",
      "Recording & playback features"
    ]
  },
  {
    sponsor: "GreenTech Inc",
    title: "Sustainability Tracker",
    description: "Create an app that helps users track their carbon footprint and suggests eco-friendly alternatives for daily activities.",
    prize: "₹30,000",
    difficulty: "Beginner",
    tags: ["Sustainability", "Mobile", "IoT"],
    requirements: [
      "Carbon footprint calculator",
      "Eco-friendly recommendations",
      "Progress tracking",
      "Community challenges"
    ]
  },
  {
    sponsor: "HealthFirst",
    title: "Telemedicine Platform",
    description: "Develop a secure telemedicine platform connecting patients with doctors, including appointment scheduling and prescription management.",
    prize: "₹55,000",
    difficulty: "Advanced",
    tags: ["Healthcare", "Security", "Backend"],
    requirements: [
      "Video consultation",
      "Electronic prescriptions",
      "Patient records management",
      "HIPAA compliance features"
    ]
  }
];
---

<Layout title="Sponsor Challenges | CODEKAR">
  <section class="page-header">
    <div class="container">
      <h1>Sponsor Challenges</h1>
      <p>Solve real-world problems posted by our industry partners.</p>
    </div>
  </section>

  <section class="challenges-section">
    <div class="container">
      <div class="grid">
        {challenges.map(challenge => (
          <div class="challenge-card">
            <div class="card-header">
              <span class="sponsor-tag">{challenge.sponsor}</span>
              <span class="prize-tag">{challenge.prize}</span>
            </div>
            <h3>{challenge.title}</h3>
            <p>{challenge.description}</p>
            
            <div class="tags">
              {challenge.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>

            <div class="requirements">
              <h4>Requirements:</h4>
              <ul>
                {challenge.requirements.slice(0, 3).map(req => (
                  <li>{req}</li>
                ))}
              </ul>
            </div>
            
            <button 
              class="view-btn challenge-trigger"
              data-challenge={JSON.stringify(challenge)}
            >
              View Details
            </button>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <SponsorChallengeModal />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const triggers = document.querySelectorAll('.challenge-trigger');
    
    triggers.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLElement;
        try {
          const challengeData = JSON.parse(target.dataset.challenge || '{}');
          if ((window as any).openChallengeModal) {
            (window as any).openChallengeModal(challengeData);
          } else {
            console.error('openChallengeModal function not found');
          }
        } catch (err) {
          console.error('Error parsing challenge data:', err);
        }
      });
    });
  });
</script>

<style>
  .page-header {
    background: #0f172a;
    color: white;
    padding: 8rem 0 4rem;
    text-align: center;
    margin-top: 80px; /* Account for fixed header */
  }

  .page-header h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff, #94a3b8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .page-header p {
    color: #cbd5e1;
    font-size: 1.2rem;
  }

  .challenges-section {
    padding: 6rem 0;
    background: #f8fafc;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .challenge-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid #e2e8f0;
    transition: all 0.2s;
    display: flex;
    flex-direction: column;
  }

  .challenge-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    border-color: var(--color-s-primary);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .sponsor-tag {
    background: #eff6ff;
    color: var(--color-s-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .prize-tag {
    color: #10b981;
    font-weight: 600;
    font-size: 1rem;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-s-text);
    font-weight: 700;
    line-height: 1.3;
  }

  p {
    color: #64748b;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    background: #f1f5f9;
    color: #64748b;
    padding: 0.25rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .requirements {
    background: #f8fafc;
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .requirements h4 {
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #475569;
  }

  .requirements ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .requirements li {
    font-size: 0.875rem;
    color: #64748b;
    margin-bottom: 0.25rem;
    padding-left: 1rem;
    position: relative;
  }

  .requirements li::before {
    content: "•";
    color: var(--color-s-primary);
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .view-btn {
    width: 100%;
    padding: 0.875rem;
    background: white;
    border: 1px solid #cbd5e1;
    border-radius: 0.5rem;
    font-weight: 600;
    color: #475569;
    transition: all 0.2s;
    cursor: pointer;
    font-size: 1rem;
  }

  .view-btn:hover {
    border-color: var(--color-s-primary);
    color: var(--color-s-primary);
    background: #f8fafc;
  }
</style>
