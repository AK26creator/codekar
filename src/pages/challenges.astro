---
import Layout from '../layouts/Layout.astro';

const challenges = [
  {
    sponsor: "TechCorp Solutions",
    title: "AI-Powered Analytics Dashboard",
    description: "Build an intelligent analytics dashboard that uses machine learning to provide real-time insights and predictions from large datasets.",
    prize: "‚Çπ50,000",
    difficulty: "Advanced",
    tags: ["AI/ML", "Data Analytics", "Visualization"],
    requirements: [
      "Real-time data processing",
      "Machine learning integration",
      "Interactive visualizations",
      "Scalable architecture"
    ]
  },
  {
    sponsor: "CloudServe Inc",
    title: "Serverless Deployment Platform",
    description: "Create a platform that simplifies deploying and managing serverless applications with automatic scaling and monitoring.",
    prize: "‚Çπ40,000",
    difficulty: "Intermediate",
    tags: ["Cloud", "DevOps", "Backend"],
    requirements: [
      "Multi-cloud support",
      "CI/CD integration",
      "Cost optimization features",
      "Real-time monitoring dashboard"
    ]
  },
  {
    sponsor: "FinanceHub",
    title: "Personal Finance Manager",
    description: "Develop a smart personal finance app with expense tracking, budget planning, and AI-powered financial insights.",
    prize: "‚Çπ35,000",
    difficulty: "Intermediate",
    tags: ["FinTech", "Mobile", "AI"],
    requirements: [
      "Expense categorization",
      "Budget recommendations",
      "Multi-currency support",
      "Data security & encryption"
    ]
  },
  {
    sponsor: "EduTech Solutions",
    title: "Virtual Classroom Platform",
    description: "Build an interactive virtual classroom with real-time collaboration, whiteboard, and AI-powered student engagement tracking.",
    prize: "‚Çπ45,000",
    difficulty: "Advanced",
    tags: ["EdTech", "WebRTC", "AI"],
    requirements: [
      "Video conferencing integration",
      "Interactive whiteboard",
      "Student engagement analytics",
      "Recording & playback features"
    ]
  },
  {
    sponsor: "GreenTech Inc",
    title: "Sustainability Tracker",
    description: "Create an app that helps users track their carbon footprint and suggests eco-friendly alternatives for daily activities.",
    prize: "‚Çπ30,000",
    difficulty: "Beginner",
    tags: ["Sustainability", "Mobile", "IoT"],
    requirements: [
      "Carbon footprint calculator",
      "Eco-friendly recommendations",
      "Progress tracking",
      "Community challenges"
    ]
  },
  {
    sponsor: "HealthFirst",
    title: "Telemedicine Platform",
    description: "Develop a secure telemedicine platform connecting patients with doctors, including appointment scheduling and prescription management.",
    prize: "‚Çπ55,000",
    difficulty: "Advanced",
    tags: ["Healthcare", "Security", "Backend"],
    requirements: [
      "Video consultation",
      "Electronic prescriptions",
      "Patient records management",
      "HIPAA compliance features"
    ]
  }
];
---

<Layout title="Sponsor Challenges - KODEKAR">
  <div class="challenges-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <h1 class="page-title">Sponsor Challenges</h1>
        <p class="page-subtitle">Solve real-world problems from industry leaders and win exclusive prizes worth ‚Çπ2,55,000!</p>
        <div class="stats">
          <div class="stat-item">
            <div class="stat-number">6</div>
            <div class="stat-label">Challenges</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">‚Çπ2.5L+</div>
            <div class="stat-label">Total Prizes</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">3</div>
            <div class="stat-label">Difficulty Levels</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Challenges Grid -->
    <section class="challenges-section">
      <div class="container">
        <div class="challenges-grid">
          {challenges.map((challenge) => (
            <div class="challenge-card" data-difficulty={challenge.difficulty.toLowerCase()}>
              <div class="card-header">
                <div class="sponsor-badge">{challenge.sponsor}</div>
                <div class="difficulty-badge" data-difficulty={challenge.difficulty.toLowerCase()}>
                  {challenge.difficulty}
                </div>
              </div>
              
              <h2 class="challenge-title">{challenge.title}</h2>
              <p class="challenge-description">{challenge.description}</p>
              
              <div class="tags">
                {challenge.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              
              <div class="requirements">
                <h3>Key Requirements:</h3>
                <ul>
                  {challenge.requirements.map(req => (
                    <li>{req}</li>
                  ))}
                </ul>
              </div>
              
              <div class="card-footer">
                <div class="prize-amount">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
                    <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
                    <path d="M4 22h16"></path>
                    <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
                    <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
                    <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
                  </svg>
                  {challenge.prize}
                </div>
                <button class="details-btn">Learn More</button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Info Section -->
    <section class="info-section">
      <div class="container">
        <h2 class="info-title">How to Participate</h2>
        <div class="info-grid">
          <div class="info-card">
            <div class="info-icon">üìù</div>
            <h3>1. Register</h3>
            <p>Register for KODEKAR and indicate your interest in sponsor challenges during team formation.</p>
          </div>
          <div class="info-card">
            <div class="info-icon">üí°</div>
            <h3>2. Choose Challenge</h3>
            <p>Select one or more sponsor challenges that align with your team's expertise and interests.</p>
          </div>
          <div class="info-card">
            <div class="info-icon">‚ö°</div>
            <h3>3. Build Solution</h3>
            <p>Develop your solution during the hackathon timeframe following the challenge requirements.</p>
          </div>
          <div class="info-card">
            <div class="info-icon">üéØ</div>
            <h3>4. Submit & Win</h3>
            <p>Submit your project with code, demo, and documentation to be judged for prizes!</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .challenges-page {
    min-height: 100dvh;
    background: #f8fafc;
  }

  .hero-section {
    background: linear-gradient(135deg, var(--color-s-primary) 0%, var(--color-s-accent) 100%);
    padding: 8rem 0 4rem;
    text-align: center;
    color: white;
    margin-top: 80px;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.25rem;
    opacity: 0.95;
    max-width: 700px;
    margin: 0 auto 3rem;
  }

  .stats {
    display: flex;
    gap: 4rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1rem;
    opacity: 0.9;
  }



  .challenges-section {
    padding: 4rem 0;
  }

  .challenges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 2rem;
  }

  .challenge-card {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 2px solid transparent;
    display: flex;
    flex-direction: column;
  }

  .challenge-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
    border-color: var(--color-s-light);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    gap: 1rem;
  }

  .sponsor-badge {
    background: linear-gradient(135deg, var(--color-s-primary) 0%, var(--color-s-accent) 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.875rem;
    flex-shrink: 0;
  }

  .difficulty-badge {
    padding: 0.375rem 0.875rem;
    border-radius: 15px;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    flex-shrink: 0;
  }

  .difficulty-badge[data-difficulty="beginner"] {
    background: #dcfce7;
    color: #166534;
  }

  .difficulty-badge[data-difficulty="intermediate"] {
    background: #fef3c7;
    color: #92400e;
  }

  .difficulty-badge[data-difficulty="advanced"] {
    background: #fee2e2;
    color: #991b1b;
  }

  .challenge-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-s-primary-dark);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .challenge-description {
    color: #64748b;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    background: #f1f5f9;
    color: var(--color-s-primary);
    padding: 0.375rem 0.875rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .requirements {
    background: #f8fafc;
    padding: 1.25rem;
    border-radius: 12px;
    margin-bottom: 1.5rem;
  }

  .requirements h3 {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-s-primary-dark);
    margin-bottom: 0.75rem;
  }

  .requirements ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .requirements li {
    padding: 0.375rem 0 0.375rem 1.5rem;
    position: relative;
    color: #475569;
    font-size: 0.875rem;
  }

  .requirements li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--color-s-primary);
    font-weight: 700;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 2px solid #f1f5f9;
  }

  .prize-amount {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.75rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-s-primary) 0%, var(--color-s-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .prize-amount svg {
    color: var(--color-s-primary);
    flex-shrink: 0;
  }

  .details-btn {
    background: var(--color-s-primary);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .details-btn:hover {
    background: var(--color-s-primary-dark);
    transform: translateY(-2px);
  }

  .info-section {
    padding: 4rem 0;
    background: white;
  }

  .info-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-s-primary) 0%, var(--color-s-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 3rem;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .info-card {
    text-align: center;
    padding: 2rem;
  }

  .info-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .info-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-s-primary-dark);
    margin-bottom: 0.75rem;
  }

  .info-card p {
    color: #64748b;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 6rem 0 3rem;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .stats {
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .challenges-grid {
      grid-template-columns: 1fr;
    }

    .card-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }

    .details-btn {
      width: 100%;
    }

    .prize-amount {
      justify-content: center;
    }
  }
</style>
