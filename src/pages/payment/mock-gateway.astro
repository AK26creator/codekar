---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Payment Gateway - CODEKAR" hideCTA={true}>
  <div class="payment-gateway">
    <div class="gateway-card">
      <h1>Complete Your Payment</h1>
      <div class="payment-details">
        <div class="detail-row">
          <span class="label">Order ID:</span>
          <span class="value" id="order-id">Loading...</span>
        </div>
        <div class="detail-row">
          <span class="label">Amount:</span>
          <span class="value amount" id="amount">Loading...</span>
        </div>
      </div>

      <div class="qr-section">
        <h3>Scan to Pay (Mock QR)</h3>
        <div class="qr-container">
          <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=CODEKAR-MOCK-PAYMENT" alt="Mock Payment QR" />
        </div>
        <p class="qr-label">Scan with any UPI App</p>
      </div>

      <div class="actions">
        <button class="cancel-btn" id="btn-cancel">
          <span class="icon">✕</span>
          <span>Cancel Payment & Return to Form</span>
        </button>
      </div>

      <div class="debug-links">
        <button id="btn-success" class="debug-btn">Debug: Simulate Successful Payment</button>
      </div>

      <p class="note">This is a mock payment gateway for testing. In production, this will be replaced with real Zoho Payments.</p>
    </div>
  </div>
</Layout>

<script>
  function initGateway() {
    console.log('Payment Gateway Initialized');
    
    // Get payment details from URL
    const urlParams = new URLSearchParams(window.location.search);
    const orderId = urlParams.get('order') || `MOCK-${Math.floor(Math.random() * 1000000)}`;
    const amount = urlParams.get('amount') || '300';

    // Display payment details
    const orderIdEl = document.getElementById('order-id');
    const amountEl = document.getElementById('amount');
    
    if (orderIdEl) orderIdEl.textContent = orderId;
    if (amountEl) amountEl.textContent = `₹${amount}`;

    // Simulate successful payment
    const successBtn = document.getElementById('btn-success');
    if (successBtn) {
      successBtn.onclick = () => {
        console.log('Redirecting to success page...');
        const ref = urlParams.get('ref') || '';
        window.location.href = `/payment/success?order=${orderId}&amount=${amount}&ref=${ref}`;
      };
    }

    // Cancel payment
    const cancelBtn = document.getElementById('btn-cancel');
    if (cancelBtn) {
      cancelBtn.onclick = () => {
        console.log('Returning to registration form...');
        window.location.href = '/#registration';
      };
    }
  }

  // Run on load and on view transition
  initGateway();
  document.addEventListener('astro:page-load', initGateway);
</script>

<style>
  .payment-gateway {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(135deg, #f8fafc 0%, #dbeafe 100%);
  }

  .gateway-card {
    background: white;
    padding: 3rem 2rem;
    border-radius: 1rem;
    max-width: 500px;
    width: 100%;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-size: 1.75rem;
    color: var(--color-s-primary-dark);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .payment-details {
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
  }

  .detail-row + .detail-row {
    border-top: 1px solid #e2e8f0;
    margin-top: 0.5rem;
  }

  .label {
    font-weight: 600;
    color: #475569;
  }

  .value {
    color: var(--color-s-primary-dark);
    font-weight: 600;
  }

  .value.amount {
    color: var(--color-s-primary);
    font-size: 1.25rem;
  }

  .qr-section {
    text-align: center;
    margin: 2rem 0;
    padding: 1.5rem;
    background: white;
    border: 2px dashed #e2e8f0;
    border-radius: 1rem;
  }

  .qr-section h3 {
    font-size: 1rem;
    color: #64748b;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .qr-container {
    background: white;
    padding: 1rem;
    display: inline-block;
    border-radius: 0.5rem;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    margin-bottom: 0.75rem;
  }

  .qr-container img {
    display: block;
    width: 150px;
    height: 150px;
  }

  .qr-label {
    font-size: 0.875rem;
    color: #94a3b8;
    margin: 0;
  }

  .actions {
    margin-bottom: 1.5rem;
  }

  .cancel-btn {
    width: 100%;
    padding: 1.25rem;
    border: 2px solid #ef4444;
    background: white;
    color: #ef4444;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .cancel-btn .icon {
    width: 32px;
    height: 32px;
    background: #ef4444;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
  }

  .cancel-btn:hover {
    background: #fef2f2;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.1);
  }

  .debug-links {
    text-align: center;
    margin-bottom: 2rem;
  }

  .debug-btn {
    background: none;
    border: none;
    color: #94a3b8;
    font-size: 0.8rem;
    text-decoration: underline;
    cursor: pointer;
    transition: color 0.2s;
  }

  .debug-btn:hover {
    color: var(--color-s-primary);
  }

  .note {
    text-align: center;
    color: #64748b;
    font-size: 0.875rem;
    padding: 1rem;
    background: #fef3c7;
    border-radius: 0.5rem;
    border-left: 4px solid #f59e0b;
  }
</style>
