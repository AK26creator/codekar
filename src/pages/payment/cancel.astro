---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Payment Cancelled - CODEKAR" hideCTA={true}>
  <div class="payment-status">
    <div class="status-card cancel">
      <div class="icon">âœ•</div>
      <h1>Payment Cancelled</h1>
      <p class="message">Your payment was not completed. No charges have been made.</p>
      
      <div class="info">
        <p>If you encountered any issues during payment, please try again or contact our support team.</p>
      </div>

      <div class="actions">
        <button id="retry-btn" class="btn-retry">Try Again</button>
        <a href="/" class="btn-home">Return to Home</a>
      </div>
    </div>
  </div>
</Layout>

<script>
  const retryBtn = document.getElementById('retry-btn');
  
  retryBtn?.addEventListener('click', () => {
    // Redirect to home with registration hash to trigger the modal
    window.location.href = '/#registration';
  });
</script>

<style>
  .payment-status {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(135deg, #f8fafc 0%, #fee2e2 100%);
  }

  .status-card {
    background: white;
    padding: 3rem 2rem;
    border-radius: 1rem;
    max-width: 500px;
    width: 100%;
    text-align: center;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .status-card.cancel .icon {
    width: 80px;
    height: 80px;
    background: #ef4444;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    margin: 0 auto 1.5rem;
  }

  h1 {
    font-size: 2rem;
    color: var(--color-s-primary-dark);
    margin-bottom: 0.5rem;
  }

  .message {
    color: #64748b;
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .info {
    background: #fef2f2;
    padding: 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
    border-left: 4px solid #ef4444;
  }

  .info p {
    color: #7f1d1d;
    margin: 0;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-retry {
    background: var(--color-s-primary);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s, background 0.2s;
  }

  .btn-retry:hover {
    background: var(--color-s-primary-dark);
    transform: translateY(-2px);
  }

  .btn-home {
    background: transparent;
    color: var(--color-s-primary);
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    border: 2px solid var(--color-s-primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
    display: inline-block;
  }

  .btn-home:hover {
    background: var(--color-s-primary);
    color: white;
  }
</style>
