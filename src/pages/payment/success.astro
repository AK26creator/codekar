---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Payment Successful - CODEKAR" hideCTA={true}>
  <div class="payment-status">
    <div class="status-card success">
      <div class="icon">✓</div>
      <h1>Payment Successful!</h1>
      <p class="message">Your registration for CODEKAR hackathon has been confirmed.</p>
      
      <div class="details">
        <div class="detail-row">
          <span class="label">Order ID:</span>
          <span class="value" id="order-id">Loading...</span>
        </div>
        <div class="detail-row">
          <span class="label">Amount Paid:</span>
          <span class="value" id="amount">Loading...</span>
        </div>
        <div class="detail-row team-id-row">
          <span class="label">Team ID:</span>
          <span class="value highlight" id="team-id">Loading...</span>
        </div>
      </div>

      <div class="code-note">
        <p><strong>Note:</strong> Please save this code, it is your <strong>Team ID</strong>.</p>
      </div>

      <div class="next-steps">
        <h3>What's Next?</h3>
        <ul>
          <li>Check your email for registration confirmation</li>
          <li>Join our Discord community</li>
          <li>Start working on your project idea</li>
        </ul>
      </div>

      <a href="/" class="btn-home">Return to Home</a>
    </div>
  </div>
</Layout>

<script>
  // Get order details from URL
  const urlParams = new URLSearchParams(window.location.search);
  const orderId = urlParams.get('order') || 'N/A';
  const amount = urlParams.get('amount') || 'N/A';

  // Display order details
  const orderIdEl = document.getElementById('order-id');
  const amountEl = document.getElementById('amount');
  
  if (orderIdEl) orderIdEl.textContent = orderId;
  if (amountEl) amountEl.textContent = `₹${amount}`;

  // Generate or Update unique Team ID
  const teamIdEl = document.getElementById('team-id');
  if (teamIdEl) {
    // If orderId is N/A or empty, generate one, else use it
    if (orderId && orderId !== 'N/A') {
      teamIdEl.textContent = orderId;
    } else {
      const randomStr = Math.random().toString(36).substring(2, 7).toUpperCase();
      const uniqueId = `CK26-${randomStr}`;
      teamIdEl.textContent = uniqueId;
    }
  }

  // Confirm payment in Supabase
  const ref = urlParams.get('ref');
  if (ref) {
    console.log('Confirming payment in Supabase...', ref);
    
    async function confirmPayment() {
      try {
        const { supabase } = await import('../../lib/supabase');
        
        const { error } = await supabase
          .from('registrations')
          .update({ payment_status: 'completed' })
          .eq('id', ref);

        if (error) throw error;
        console.log('Payment status updated successfully');
      } catch (err) {
        console.error('Failed to update payment status:', err);
      }
    }

    confirmPayment();
  }
</script>

<style>
  .payment-status {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(135deg, #f8fafc 0%, #e0f2fe 100%);
  }

  .status-card {
    background: white;
    padding: 3rem 2rem;
    border-radius: 1rem;
    max-width: 500px;
    width: 100%;
    text-align: center;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .status-card.success .icon {
    width: 80px;
    height: 80px;
    background: #10b981;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    margin: 0 auto 1.5rem;
  }

  h1 {
    font-size: 2rem;
    color: var(--color-s-primary-dark);
    margin-bottom: 0.5rem;
  }

  .message {
    color: #64748b;
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .details {
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
  }

  .detail-row + .detail-row {
    border-top: 1px solid #e2e8f0;
  }

  .label {
    font-weight: 600;
    color: #475569;
  }

  .value {
    color: var(--color-s-primary);
    font-weight: 600;
  }

  .team-id-row {
    margin-top: 1rem;
    padding-top: 1rem !important;
    border-top: 2px solid #e2e8f0 !important;
  }

  .value.highlight {
    color: var(--color-s-primary-dark);
    font-size: 1.5rem;
    font-family: 'Space Mono', monospace;
    letter-spacing: 2px;
    background: #eff6ff;
    padding: 0.25rem 1rem;
    border-radius: 0.5rem;
  }

  .code-note {
    background: #fffbeb;
    border: 1px solid #fef3c7;
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .code-note p {
    color: #92400e;
    font-size: 0.95rem;
    margin: 0;
  }

  .next-steps {
    text-align: left;
    margin-bottom: 2rem;
  }

  .next-steps h3 {
    color: var(--color-s-primary-dark);
    margin-bottom: 1rem;
  }

  .next-steps ul {
    list-style: none;
    padding: 0;
  }

  .next-steps li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .next-steps li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--color-s-primary);
  }

  .btn-home {
    display: inline-block;
    background: var(--color-s-primary);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s, background 0.2s;
  }

  .btn-home:hover {
    background: var(--color-s-primary-dark);
    transform: translateY(-2px);
  }
</style>
